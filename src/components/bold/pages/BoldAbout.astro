---
/**
 * BoldAbout ‚Äî Company story, values, team with bold card styling.
 */
import type { CollectionEntry } from 'astro:content'
import { siteConfig } from '@lib/site-config'

interface Props {
  team: CollectionEntry<'team'>[]
}

const { team } = Astro.props

const values = [
  {
    title: 'Quality First',
    desc: 'We never cut corners. Every surface, every room, every time.',
    icon: 'üíé',
  },
  {
    title: 'Fair & Transparent',
    desc: 'No hidden fees. Fair wages for our team. Honest pricing for our clients.',
    icon: 'ü§ù',
  },
  {
    title: 'Eco-Conscious',
    desc: 'Green cleaning products and sustainable practices as standard.',
    icon: 'üåø',
  },
  {
    title: 'Reliable',
    desc: 'On time, every time. Consistent results you can count on.',
    icon: '‚ö°',
  },
]
---

<main data-page="about">
  {/* ‚îÄ‚îÄ Page header ‚îÄ‚îÄ */}
  <section class="page-header">
    <div class="container">
      <span class="page-header__label">Who We Are</span>
      <h1 class="page-header__title">About CleanSpark</h1>
      <p class="page-header__subtitle">Seattle's trusted cleaning experts since 2019.</p>
    </div>
  </section>

  {/* ‚îÄ‚îÄ Story ‚îÄ‚îÄ */}
  <section class="story reveal--left reveal">
    <div class="container">
      <div class="story__grid">
        <div class="story__content">
          <span class="section-label">Our Story</span>
          <h2 class="section-heading">How We Started</h2>
          <p class="body-text">
            CleanSpark was born from a simple belief: everyone deserves a clean, healthy space ‚Äî and
            every cleaner deserves fair pay and respect. Founded in 2019, we started as a one-person
            operation in a Seattle studio apartment with a vacuum, a bucket, and a vision.
          </p>
          <p class="body-text">
            Today, we're a team of dedicated professionals serving homes and businesses across the
            greater Seattle area. We've completed over 5,000 cleans, maintained a 4.9-star rating,
            and built something we're truly proud of.
          </p>
        </div>
        <div class="story__art" aria-hidden="true">
          <div class="story__shape story__shape--1"></div>
          <div class="story__shape story__shape--2"></div>
          <div class="story__shape story__shape--3"></div>
        </div>
      </div>
    </div>
  </section>

  {/* ‚îÄ‚îÄ Values ‚îÄ‚îÄ */}
  <section class="values-section">
    <div class="container">
      <div class="values-header reveal">
        <span class="section-label">What Drives Us</span>
        <h2 class="section-heading section-heading--center">Our Values</h2>
      </div>
      <div class="values-grid reveal-stagger reveal">
        {
          values.map((v) => (
            <article class="value-card">
              <span class="value-card__icon" aria-hidden="true">
                {v.icon}
              </span>
              <h3 class="value-card__title">{v.title}</h3>
              <p class="value-card__desc">{v.desc}</p>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  {/* ‚îÄ‚îÄ Team ‚îÄ‚îÄ */}
  <section class="team-section">
    <div class="container">
      <div class="team-header reveal">
        <span class="section-label">The People Behind the Sparkle</span>
        <h2 class="section-heading section-heading--center">Meet Our Team</h2>
      </div>
      <div class="team-grid reveal-stagger reveal">
        {
          team.map((member) => (
            <article class="member" data-member={member.data.id}>
              <div class="member__avatar" aria-hidden="true">
                {member.data.name.charAt(0)}
              </div>
              <h3 class="member__name">{member.data.name}</h3>
              <p class="member__role">{member.data.role}</p>
              <p class="member__bio">
                {member.data.bio.length > 200
                  ? member.data.bio.slice(0, 200) + '...'
                  : member.data.bio}
              </p>
              {member.data.certifications && member.data.certifications.length > 0 && (
                <div class="member__certs">
                  {member.data.certifications.map((cert) => (
                    <span class="member__cert">{cert}</span>
                  ))}
                </div>
              )}
            </article>
          ))
        }
      </div>
    </div>
  </section>

  {/* ‚îÄ‚îÄ Service Areas ‚îÄ‚îÄ */}
  <section class="areas-section reveal">
    <div class="container">
      <h2 class="section-heading section-heading--center section-heading--white">
        Proudly Serving
      </h2>
      <p class="areas__list">{siteConfig.serviceAreas.join(' \u00B7 ')}</p>
    </div>
  </section>
</main>

<style>
  /* ‚îÄ‚îÄ Page header ‚îÄ‚îÄ */
  .page-header {
    padding: var(--section-padding) 2rem 3rem;
    text-align: center;
    clip-path: polygon(0 0, 100% 0, 100% 92%, 0 100%);
    padding-bottom: 6rem;
  }

  .page-header__label {
    display: block;
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text);
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(1rem, 2vw, 1.25rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ‚îÄ‚îÄ Shared ‚îÄ‚îÄ */
  .container {
    max-width: var(--container-max);
    margin: 0 auto;
  }

  .section-label {
    display: block;
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: var(--color-secondary);
    margin-bottom: 0.5rem;
  }

  .section-heading {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    color: var(--color-text);
    letter-spacing: -0.02em;
    margin-bottom: 1.5rem;
  }

  .section-heading--center {
    text-align: center;
  }

  .section-heading--white {
    color: white;
  }

  .body-text {
    color: var(--color-text);
    line-height: 1.7;
    margin-bottom: 1rem;
    font-size: 1.0625rem;
  }

  /* ‚îÄ‚îÄ Story ‚îÄ‚îÄ */
  .story {
    padding: 4rem 2rem;
  }

  .story__grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 4rem;
    align-items: center;
  }

  .story__art {
    position: relative;
    height: 320px;
  }

  .story__shape {
    position: absolute;
    border-radius: 50%;
  }

  .story__shape--1 {
    width: 200px;
    height: 200px;
    background: linear-gradient(135deg, var(--color-primary), rgba(56, 217, 169, 0.3));
    top: 10%;
    left: 20%;
  }

  .story__shape--2 {
    width: 140px;
    height: 140px;
    background: linear-gradient(135deg, var(--color-secondary), rgba(255, 107, 53, 0.3));
    bottom: 10%;
    left: 40%;
  }

  .story__shape--3 {
    width: 80px;
    height: 80px;
    background: var(--color-accent);
    top: 30%;
    right: 10%;
    border-radius: 16px;
    transform: rotate(45deg);
  }

  /* ‚îÄ‚îÄ Values ‚îÄ‚îÄ */
  .values-section {
    padding: 5rem 2rem;
    background: var(--color-surface);
  }

  .values-header {
    margin-bottom: 3rem;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 2rem;
  }

  .value-card {
    background: var(--color-background);
    border: 3px solid var(--color-primary);
    border-radius: var(--radius-md);
    padding: 2rem;
    box-shadow: 6px 6px 0 var(--color-primary);
    transition:
      transform 0.25s ease-out,
      box-shadow 0.25s ease-out;
    text-align: center;
  }

  .value-card:hover {
    transform: translate(-3px, -3px);
    box-shadow: 9px 9px 0 var(--color-primary);
  }

  .value-card__icon {
    font-size: 2rem;
    display: block;
    margin-bottom: 1rem;
  }

  .value-card__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.125rem;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .value-card__desc {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  /* ‚îÄ‚îÄ Team ‚îÄ‚îÄ */
  .team-section {
    padding: 5rem 2rem;
  }

  .team-header {
    margin-bottom: 3rem;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .member {
    background: var(--color-surface);
    border: 3px solid transparent;
    border-radius: var(--radius-md);
    padding: 2rem;
    text-align: center;
    transition:
      border-color 0.2s,
      transform 0.2s;
  }

  .member:hover {
    border-color: var(--color-primary);
    transform: translateY(-4px);
  }

  .member__avatar {
    width: 5rem;
    height: 5rem;
    border-radius: var(--radius-full);
    background: var(--color-primary);
    color: white;
    margin: 0 auto 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 700;
  }

  .member__name {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.125rem;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .member__role {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .member__bio {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  .member__certs {
    margin-top: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    justify-content: center;
  }

  .member__cert {
    font-size: 0.75rem;
    padding: 0.25rem 0.625rem;
    background: color-mix(in srgb, var(--color-primary) 12%, transparent);
    border-radius: var(--radius-full);
    color: var(--color-primary);
    font-weight: 600;
  }

  /* ‚îÄ‚îÄ Areas ‚îÄ‚îÄ */
  .areas-section {
    padding: 5rem 2rem;
    background: var(--color-primary);
    clip-path: polygon(0 8%, 100% 0, 100% 100%, 0 100%);
    text-align: center;
  }

  .areas__list {
    color: rgba(255, 255, 255, 0.85);
    font-size: 1.125rem;
    line-height: 2;
  }

  @media (max-width: 768px) {
    .story__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .story__art {
      height: 200px;
    }

    .value-card {
      box-shadow: 4px 4px 0 var(--color-primary);
    }
  }
</style>
