---
/**
 * BoldPricing — Bold pricing tiers, FAQ accordion, CTA.
 */
import type { CollectionEntry } from 'astro:content'
import { siteConfig } from '@lib/site-config'

interface Props {
  pricing: CollectionEntry<'pricing'>[]
}

const { pricing } = Astro.props

const faqs = [
  { q: 'Do I need to be home during the cleaning?', a: 'Not at all. Many clients give us a key or access code. All our team members are background-checked, insured, and bonded.' },
  { q: "What if I'm not satisfied with the cleaning?", a: "We have a 100% satisfaction guarantee. If anything isn't up to your standards, we'll re-clean it free of charge within 24 hours." },
  { q: 'Do you bring your own supplies and equipment?', a: "Yes! We bring all eco-friendly cleaning products and professional-grade equipment. You don't need to supply anything." },
  { q: 'Can I customize my cleaning plan?', a: "Absolutely. While our tiers give you a starting point, we're happy to add or adjust services to match your specific needs. Just let us know when you book." },
  { q: 'How do I pay?', a: 'We accept all major credit cards and send invoices via email after each visit. No cash needed, no upfront payments.' },
]
---

<main data-page="pricing">
  {/* ── Page header ── */}
  <section class="page-header">
    <div class="container">
      <span class="page-header__label">Simple & Fair</span>
      <h1 class="page-header__title">Transparent Pricing</h1>
      <p class="page-header__subtitle">No hidden fees. No surprises. Just clean, competitive rates.</p>
    </div>
  </section>

  {/* ── Pricing tiers ── */}
  <section class="tiers-section reveal">
    <div class="container">
      <div class="tiers reveal-stagger">
        {pricing.map((tier) => (
          <article
            class:list={['tier', { 'tier--highlighted': tier.data.highlighted }]}
            data-tier={tier.data.id}
          >
            {tier.data.highlighted && (
              <span class="tier__badge">Most Popular</span>
            )}
            <h2 class="tier__name">{tier.data.name}</h2>
            <p class="tier__tagline">{tier.data.tagline}</p>
            <div class="tier__price-block">
              <span class="tier__price">${tier.data.price}</span>
              <span class="tier__unit">{tier.data.priceUnit}</span>
            </div>
            {tier.data.frequency && (
              <p class="tier__freq">{tier.data.frequency}</p>
            )}
            <ul class="tier__features">
              {tier.data.features.map((f) => (
                <li class:list={['tier__feature', { 'tier__feature--excluded': !f.included }]}>
                  <span aria-hidden="true" class="tier__feature-icon">{f.included ? '\u2713' : '\u2717'}</span>
                  {f.text}
                </li>
              ))}
            </ul>
            <a
              href={tier.data.ctaUrl}
              class:list={['tier__cta', { 'tier__cta--filled': tier.data.highlighted }]}
            >
              {tier.data.ctaText}
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

  {/* ── FAQ ── */}
  <section class="faq-section reveal">
    <div class="container container--narrow">
      <div class="faq-header">
        <span class="section-label">Got Questions?</span>
        <h2 class="section-heading">Frequently Asked Questions</h2>
      </div>
      <div class="faq-list">
        {faqs.map((faq) => (
          <details class="faq">
            <summary class="faq__q">{faq.q}</summary>
            <p class="faq__a">{faq.a}</p>
          </details>
        ))}
      </div>
    </div>
  </section>

  {/* ── CTA ── */}
  <section class="cta-block reveal">
    <div class="container">
      <h2 class="cta-block__title">Ready to Get Started?</h2>
      <p class="cta-block__text">
        Book online or call us at <a href={`tel:${siteConfig.phone}`} class="cta-block__phone">{siteConfig.phone}</a>.
      </p>
      <a href="/contact" class="btn btn--white">Get Your Free Quote &rarr;</a>
    </div>
  </section>
</main>

<style>
  /* ── Page header ── */
  .page-header {
    padding: var(--section-padding) 2rem 3rem;
    text-align: center;
  }

  .page-header__label {
    display: block;
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text);
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(1rem, 2vw, 1.25rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ── Shared ── */
  .container { max-width: var(--container-max); margin: 0 auto; padding: 0 2rem; }
  .container--narrow { max-width: 720px; }

  .section-label {
    display: block;
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: var(--color-secondary);
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .section-heading {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    color: var(--color-text);
    text-align: center;
    margin-bottom: 2.5rem;
    letter-spacing: -0.02em;
  }

  /* ── Tiers ── */
  .tiers-section { padding: 0 0 4rem; }

  .tiers {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    align-items: start;
  }

  .tier {
    background: var(--color-surface);
    border: 3px solid color-mix(in srgb, var(--color-text) 8%, transparent);
    border-radius: var(--radius-md);
    padding: 2.5rem 2rem;
    text-align: center;
    position: relative;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .tier:hover {
    transform: translateY(-4px);
  }

  .tier--highlighted {
    border-color: var(--color-primary);
    box-shadow: 8px 8px 0 var(--color-primary);
  }

  .tier--highlighted:hover {
    box-shadow: 10px 10px 0 var(--color-primary);
    transform: translate(-2px, -6px);
  }

  .tier__badge {
    position: absolute;
    top: -0.875rem;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-secondary);
    color: white;
    font-family: var(--font-heading);
    font-size: 0.75rem;
    font-weight: 700;
    padding: 0.3rem 1.25rem;
    border-radius: var(--radius-full);
    letter-spacing: 0.06em;
    text-transform: uppercase;
  }

  .tier__name {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.5rem;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .tier__tagline {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    margin-bottom: 1.5rem;
  }

  .tier__price-block { margin-bottom: 0.25rem; }

  .tier__price {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 3rem;
    color: var(--color-primary);
    letter-spacing: -0.02em;
  }

  .tier__unit {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .tier__freq {
    color: var(--color-text-muted);
    font-size: 0.8125rem;
    margin-bottom: 1.5rem;
  }

  .tier__features {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem;
    text-align: left;
  }

  .tier__feature {
    padding: 0.4rem 0;
    font-size: 0.9375rem;
    color: var(--color-text);
    display: flex;
    align-items: baseline;
    gap: 0.625rem;
  }

  .tier__feature-icon {
    font-weight: 700;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .tier__feature--excluded {
    color: var(--color-text-muted);
    text-decoration: line-through;
    opacity: 0.5;
  }

  .tier__feature--excluded .tier__feature-icon {
    color: var(--color-text-muted);
  }

  .tier__cta {
    display: block;
    width: 100%;
    padding: 0.875rem;
    text-align: center;
    text-decoration: none;
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 0.9375rem;
    border-radius: var(--radius-full);
    border: 2.5px solid var(--color-primary);
    color: var(--color-primary);
    background: transparent;
    transition: all 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
    box-sizing: border-box;
  }

  .tier__cta:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }

  .tier__cta--filled {
    background: var(--color-cta);
    color: white;
    border-color: var(--color-cta);
  }

  .tier__cta--filled:hover {
    transform: translateY(-2px) scale(1.03);
    box-shadow: 0 4px 16px rgba(255, 107, 53, 0.3);
    background: var(--color-cta);
  }

  /* ── FAQ ── */
  .faq-section {
    padding: 4rem 0;
    background: var(--color-surface);
  }

  .faq-header { margin-bottom: 2rem; }

  .faq-list {
    display: flex;
    flex-direction: column;
  }

  .faq {
    border-bottom: 2px solid color-mix(in srgb, var(--color-text) 8%, transparent);
    padding: 1.5rem 0;
  }

  .faq__q {
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 1.0625rem;
    color: var(--color-text);
    cursor: pointer;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .faq__q::-webkit-details-marker { display: none; }
  .faq__q::marker { content: ''; }

  .faq__q::after {
    content: '+';
    font-weight: 600;
    font-size: 1.5rem;
    color: var(--color-primary);
    line-height: 1;
    transition: transform 0.3s ease;
    flex-shrink: 0;
    margin-left: 1rem;
  }

  .faq[open] .faq__q::after {
    content: '\2212';
    transform: rotate(180deg);
  }

  .faq__a {
    color: var(--color-text-muted);
    font-size: 1rem;
    line-height: 1.7;
    margin-top: 1rem;
  }

  /* ── CTA Block ── */
  .cta-block {
    background: var(--color-secondary);
    padding: 6rem 2rem;
    text-align: center;
    clip-path: polygon(0 6%, 100% 0, 100% 100%, 0 100%);
  }

  .cta-block__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(2rem, 4vw, 3rem);
    color: white;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .cta-block__text {
    color: rgba(255, 255, 255, 0.85);
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
  }

  .cta-block__phone {
    color: white;
    text-decoration: underline;
    font-weight: 700;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 1.0625rem;
    padding: 1rem 2.5rem;
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: all 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .btn--white {
    background: white;
    color: var(--color-secondary);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .btn--white:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
  }
</style>
