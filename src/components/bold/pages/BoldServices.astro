---
/**
 * BoldServices — Service catalog with bold card styling and category grouping.
 */
import type { CollectionEntry } from 'astro:content'
import { siteConfig } from '@lib/site-config'

interface Props {
  services: CollectionEntry<'services'>[]
}

const { services } = Astro.props

const categories = ['residential', 'commercial', 'specialty'] as const
const categoryLabels: Record<string, string> = {
  residential: 'Residential',
  commercial: 'Commercial',
  specialty: 'Specialty',
}

const servicesByCategory = Object.fromEntries(
  categories.map((cat) => [cat, services.filter((s) => s.data.category === cat)]),
) as Record<(typeof categories)[number], typeof services>
---

<main data-page="services">
  {/* ── Page header ── */}
  <section class="page-header">
    <div class="container">
      <span class="page-header__label">What We Do</span>
      <h1 class="page-header__title">Our Services</h1>
      <p class="page-header__subtitle">
        From routine home cleaning to post-construction cleanup, we have the expertise to make any space shine.
      </p>
    </div>
  </section>

  {/* ── Service categories ── */}
  {categories.map((category, catIndex) => (
    <section
      class:list={['section', { 'section--surface': catIndex % 2 === 1 }]}
      data-section={`services-${category}`}
    >
      <div class="container">
        <div class:list={['cat-header', 'reveal', catIndex % 2 === 0 ? 'reveal--left' : 'reveal--right']}>
          <span class="cat-header__label">{categoryLabels[category]}</span>
          <h2 class="cat-header__title">{categoryLabels[category]} Services</h2>
        </div>
        <div class="service-grid reveal-stagger reveal">
          {servicesByCategory[category].map((service) => (
            <article class="svc" id={service.data.slug} data-service={service.data.slug}>
              <div class="svc__top">
                <h3 class="svc__name">{service.data.name}</h3>
                <p class="svc__tagline">{service.data.tagline}</p>
              </div>
              <ul class="svc__features">
                {service.data.features.slice(0, 4).map((feature) => (
                  <li class="svc__feature">
                    <span class="svc__check" aria-hidden="true">&#10003;</span>
                    {feature}
                  </li>
                ))}
              </ul>
              <div class="svc__bottom">
                {service.data.startingPrice && (
                  <span class="svc__price">
                    From ${service.data.startingPrice} {service.data.priceUnit}
                  </span>
                )}
                <a href="/contact" class="svc__cta">Get a Quote &rarr;</a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  ))}

  {/* ── CTA ── */}
  <section class="cta-block reveal">
    <div class="container">
      <h2 class="cta-block__title">Not Sure Which Service You Need?</h2>
      <p class="cta-block__text">
        Call us at <a href={`tel:${siteConfig.phone}`} class="cta-block__phone">{siteConfig.phone}</a> or get a free quote online.
      </p>
      <a href="/contact" class="btn btn--white">Request a Free Quote &rarr;</a>
    </div>
  </section>
</main>

<style>
  /* ── Page header ── */
  .page-header {
    padding: var(--section-padding) 2rem 3rem;
    text-align: center;
    background: var(--color-background);
    clip-path: polygon(0 0, 100% 0, 100% 92%, 0 100%);
    padding-bottom: 6rem;
  }

  .page-header__label {
    display: block;
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: var(--color-secondary);
    margin-bottom: 0.75rem;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text);
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(1rem, 2vw, 1.25rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ── Section ── */
  .section {
    padding: 4rem 2rem;
  }

  .section--surface {
    background: var(--color-surface);
  }

  .container {
    max-width: var(--container-max);
    margin: 0 auto;
  }

  /* ── Category header ── */
  .cat-header {
    margin-bottom: 2.5rem;
  }

  .cat-header__label {
    display: block;
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: var(--color-secondary);
    margin-bottom: 0.5rem;
  }

  .cat-header__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    color: var(--color-text);
    letter-spacing: -0.02em;
  }

  /* ── Service grid ── */
  .service-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  /* ── Service card ── */
  .svc {
    background: var(--color-background);
    border: 3px solid var(--color-primary);
    border-radius: var(--radius-md);
    padding: 2rem;
    display: flex;
    flex-direction: column;
    box-shadow: 6px 6px 0 var(--color-primary);
    transition: transform 0.25s ease-out, box-shadow 0.25s ease-out;
  }

  .svc:hover {
    transform: translate(-3px, -3px) scale(1.02);
    box-shadow: 10px 10px 0 var(--color-primary);
  }

  .svc__top {
    margin-bottom: 1rem;
  }

  .svc__name {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .svc__tagline {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    line-height: 1.5;
  }

  .svc__features {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem;
    flex: 1;
  }

  .svc__feature {
    padding: 0.35rem 0;
    font-size: 0.9375rem;
    color: var(--color-text);
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }

  .svc__check {
    color: var(--color-primary);
    font-size: 0.875rem;
    font-weight: 700;
    flex-shrink: 0;
  }

  .svc__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.25rem;
    border-top: 2px solid color-mix(in srgb, var(--color-primary) 20%, transparent);
  }

  .svc__price {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.0625rem;
    color: var(--color-primary);
  }

  .svc__cta {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    background: var(--color-cta);
    color: var(--color-cta-text);
    border-radius: var(--radius-full);
    text-decoration: none;
    font-family: var(--font-heading);
    font-size: 0.875rem;
    font-weight: 600;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .svc__cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 107, 53, 0.3);
  }

  /* ── CTA Block ── */
  .cta-block {
    background: var(--color-secondary);
    padding: 6rem 2rem;
    text-align: center;
    clip-path: polygon(0 6%, 100% 0, 100% 100%, 0 100%);
  }

  .cta-block__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(2rem, 4vw, 3rem);
    color: white;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .cta-block__text {
    color: rgba(255, 255, 255, 0.85);
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    line-height: 1.6;
  }

  .cta-block__phone {
    color: white;
    text-decoration: underline;
    font-weight: 700;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 1.0625rem;
    padding: 1rem 2.5rem;
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: all 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .btn--white {
    background: white;
    color: var(--color-secondary);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .btn--white:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
  }

  @media (max-width: 640px) {
    .service-grid {
      grid-template-columns: 1fr;
    }

    .svc {
      box-shadow: 4px 4px 0 var(--color-primary);
    }
  }
</style>
