---
/**
 * BubblyFooter â€” Playful footer with wavy top edge and purple gradient.
 *
 * SVG wave divider, 4-column layout, fun inline icons, wiggle hover.
 */
import { siteConfig, getFullAddress } from '@lib/site-config'

const year = new Date().getFullYear()

const quickLinks = [
  { label: 'Home', href: '/' },
  { label: 'Services', href: '/services' },
  { label: 'About', href: '/about' },
  { label: 'Pricing', href: '/pricing' },
  { label: 'Gallery', href: '/gallery' },
  { label: 'Contact', href: '/contact' },
]

const serviceLinks = [
  { label: 'Regular Cleaning', href: '/services#regular-cleaning' },
  { label: 'Deep Clean', href: '/services#deep-cleaning' },
  { label: 'Move In/Out', href: '/services#move-in-out-cleaning' },
  { label: 'Office Cleaning', href: '/services#office-cleaning' },
  { label: 'Post-Construction', href: '/services#post-construction-cleaning' },
]
---

<footer class="bbf">
  <svg
    class="bbf__wave"
    viewBox="0 0 1200 80"
    preserveAspectRatio="none"
    xmlns="http://www.w3.org/2000/svg"
    aria-hidden="true"
  >
    <defs>
      <linearGradient id="bbf-grad" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" stop-color="#7C3AED"></stop>
        <stop offset="100%" stop-color="#06B6D4"></stop>
      </linearGradient>
    </defs>
    <path d="M0,40 Q200,0 400,35 T800,25 Q1000,50 1200,30 L1200,80 L0,80 Z" fill="url(#bbf-grad)"
    ></path>
  </svg>

  <div class="bbf__body">
    <div class="bbf__inner">
      <div class="bbf__grid">
        <div class="bbf__col">
          <div class="bbf__brand">CleanSpark</div>
          <p class="bbf__tagline">{siteConfig.tagline}</p>
        </div>

        <div class="bbf__col">
          <h3 class="bbf__heading">Navigation</h3>
          <ul class="bbf__list">
            {
              quickLinks.map((link) => (
                <li>
                  <a href={link.href} class="bbf__link">
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <div class="bbf__col">
          <h3 class="bbf__heading">Services</h3>
          <ul class="bbf__list">
            {
              serviceLinks.map((link) => (
                <li>
                  <a href={link.href} class="bbf__link">
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <div class="bbf__col">
          <h3 class="bbf__heading">Contact</h3>
          <ul class="bbf__list">
            <li>
              <a href={`tel:${siteConfig.phone}`} class="bbf__link">{siteConfig.phone}</a>
            </li>
            <li>
              <a href={`mailto:${siteConfig.email}`} class="bbf__link">{siteConfig.email}</a>
            </li>
            <li class="bbf__address">{getFullAddress()}</li>
          </ul>
        </div>
      </div>

      <div class="bbf__bottom">
        <p class="bbf__copy">&copy; {year} {siteConfig.name}. All rights reserved.</p>
        <div class="bbf__social">
          <a
            href={siteConfig.social.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="bbf__social-link"
            aria-label="Facebook"
          >
            Facebook
          </a>
          <a
            href={siteConfig.social.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="bbf__social-link"
            aria-label="Instagram"
          >
            Instagram
          </a>
          <a
            href={siteConfig.social.yelp}
            target="_blank"
            rel="noopener noreferrer"
            class="bbf__social-link"
            aria-label="Yelp"
          >
            Yelp
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .bbf {
    position: relative;
    margin-top: 0;
  }

  .bbf__wave {
    display: block;
    width: 100%;
    height: 60px;
    margin-bottom: -1px;
  }

  .bbf__body {
    background: linear-gradient(135deg, #7c3aed 0%, #06b6d4 100%);
    padding: 4rem 2rem 2.5rem;
    color: white;
  }

  .bbf__inner {
    max-width: var(--container-max);
    margin: 0 auto;
  }

  .bbf__grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3.5rem;
  }

  .bbf__brand {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.75rem;
    margin-bottom: 0.75rem;
  }

  .bbf__tagline {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1rem;
    line-height: 1.6;
    max-width: 280px;
  }

  .bbf__heading {
    font-family: var(--font-body);
    font-weight: 700;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin-bottom: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .bbf__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .bbf__link {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    font-size: 0.9375rem;
    display: inline-block;
    padding: 0.15rem 0;
    transition: transform 0.2s;
  }

  .bbf__link:hover {
    transform: translateX(4px);
  }

  .bbf__address {
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.9375rem;
    font-style: normal;
  }

  .bbf__bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .bbf__copy {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
  }

  .bbf__social {
    display: flex;
    gap: 1.5rem;
  }

  .bbf__social-link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 700;
    transition: color 0.2s;
  }

  .bbf__social-link:hover {
    color: white;
  }

  @media (max-width: 768px) {
    .bbf__grid {
      grid-template-columns: 1fr 1fr;
      gap: 2.5rem;
    }

    .bbf__bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .bbf__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
