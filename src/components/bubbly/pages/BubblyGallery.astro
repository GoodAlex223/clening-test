---
/**
 * BubblyGallery — Filterable photo grid with rounded cards and playful styling.
 */
import type { CollectionEntry } from 'astro:content'

interface Props {
  gallery: CollectionEntry<'gallery'>[]
  uniqueServices: string[]
}

const { gallery, uniqueServices } = Astro.props
---

<main data-page="gallery">
  {/* ── Page header ── */}
  <section class="page-header">
    <div class="container">
      <span class="section-label">See the Difference</span>
      <h1 class="page-header__title">Our Beautiful Work</h1>
      <p class="page-header__subtitle">
        Real projects, real sparkle. See the CleanSpark difference!
      </p>
    </div>
    <svg
      class="wave"
      viewBox="0 0 1200 80"
      preserveAspectRatio="none"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <path
        d="M0,40 Q200,10 400,40 T800,30 Q1000,50 1200,35 L1200,80 L0,80 Z"
        fill="var(--color-surface)"></path>
    </svg>
  </section>

  {/* ── Filters ── */}
  <section class="filters">
    <div class="container">
      <div class="filter-bar">
        <button data-filter="all" class="filter filter--active" type="button" aria-pressed="true"
          >All</button
        >
        {
          uniqueServices.map((service) => (
            <button data-filter={service} class="filter" type="button" aria-pressed="false">
              {service}
            </button>
          ))
        }
      </div>
    </div>
  </section>

  {/* ── Gallery grid ── */}
  <section class="gallery-section reveal">
    <div class="container">
      <div class="gallery-grid reveal-stagger">
        {
          gallery.map((item, i) => (
            <article class="gal" data-gallery-item data-service={item.data.service}>
              <div class="gal__images">
                <div class="gal__img-wrap">
                  <img
                    src={item.data.before}
                    alt={`Before: ${item.data.room} - ${item.data.service}`}
                    loading={i < 4 ? 'eager' : 'lazy'}
                    class="gal__img"
                  />
                  <span class="gal__label">Before</span>
                </div>
                <div class="gal__img-wrap">
                  <img
                    src={item.data.after}
                    alt={`After: ${item.data.room} - ${item.data.service}`}
                    loading={i < 4 ? 'eager' : 'lazy'}
                    class="gal__img"
                  />
                  <span class="gal__label gal__label--after">After</span>
                </div>
              </div>
              <div class="gal__info">
                <div class="gal__meta">
                  <span class="gal__room">{item.data.room}</span>
                  <span class="gal__service">{item.data.service}</span>
                </div>
                <p class="gal__desc">{item.data.description}</p>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  {/* ── CTA ── */}
  <section class="cta-block reveal">
    <svg
      class="wave wave--cta"
      viewBox="0 0 1200 80"
      preserveAspectRatio="none"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <path d="M0,50 Q300,10 600,45 T1200,35 L1200,80 L0,80 Z" fill="var(--color-primary)"></path>
    </svg>
    <div class="cta-block__body">
      <div class="container">
        <h2 class="cta-block__title">Want Results Like These?</h2>
        <p class="cta-block__text">Every space has potential. Let us show you yours!</p>
        <a href="/contact" class="btn btn--white">Book Your Clean</a>
      </div>
    </div>
  </section>
</main>

<script>
  function initBubblyGalleryFilter(): void {
    const buttons = document.querySelectorAll<HTMLButtonElement>('[data-filter]')
    const items = document.querySelectorAll<HTMLElement>('[data-gallery-item]')

    buttons.forEach((btn) => {
      btn.addEventListener('click', () => {
        const filter = btn.dataset.filter

        buttons.forEach((b) => {
          const isActive = b === btn
          b.classList.toggle('filter--active', isActive)
          b.setAttribute('aria-pressed', String(isActive))
        })

        items.forEach((item) => {
          const matches = filter === 'all' || item.dataset.service === filter
          item.style.display = matches ? '' : 'none'
        })
      })
    })
  }

  initBubblyGalleryFilter()
</script>

<style>
  /* ── Page header ── */
  .page-header {
    padding: var(--section-padding) 2rem 0;
    text-align: center;
    background: var(--color-background);
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(1rem, 2vw, 1.175rem);
    max-width: 540px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ── Shared ── */
  .container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-label {
    display: block;
    font-family: var(--font-body);
    font-weight: 700;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .wave {
    display: block;
    width: 100%;
    height: 60px;
    margin-top: -1px;
  }
  .wave--cta {
    margin-top: 0;
    margin-bottom: -1px;
  }

  /* ── Filters ── */
  .filters {
    padding: 0 0 2.5rem;
    background: var(--color-surface);
  }

  .filter-bar {
    display: flex;
    flex-wrap: wrap;
    gap: 0.625rem;
    justify-content: center;
  }

  .filter {
    padding: 0.5rem 1.5rem;
    border: 2px solid var(--color-primary);
    border-radius: var(--radius-full);
    background: transparent;
    color: var(--color-primary);
    cursor: pointer;
    font-family: var(--font-body);
    font-size: 0.875rem;
    font-weight: 700;
    transition: all 0.2s ease;
  }

  .filter:hover {
    background: color-mix(in srgb, var(--color-primary) 10%, transparent);
  }

  .filter--active {
    background: var(--color-primary);
    color: white;
    box-shadow: 0 4px 12px rgba(124, 58, 237, 0.25);
  }

  /* ── Gallery grid ── */
  .gallery-section {
    padding: 0 0 4rem;
    background: var(--color-surface);
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 2rem;
  }

  .gal {
    background: white;
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: 0 2px 16px rgba(124, 58, 237, 0.06);
    transition:
      transform 0.25s ease,
      box-shadow 0.25s ease;
  }

  .gal:hover {
    transform: translateY(-4px) rotate(-0.3deg);
    box-shadow: 0 12px 32px rgba(124, 58, 237, 0.12);
  }

  .gal__images {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .gal__img-wrap {
    position: relative;
    overflow: hidden;
  }

  .gal__img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .gal:hover .gal__img {
    transform: scale(1.03);
  }

  .gal__label {
    position: absolute;
    top: 0.625rem;
    left: 0.625rem;
    background: var(--color-text);
    color: white;
    font-family: var(--font-body);
    font-size: 0.6875rem;
    font-weight: 700;
    padding: 0.2rem 0.75rem;
    border-radius: var(--radius-full);
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  .gal__label--after {
    background: var(--color-primary);
  }

  .gal__info {
    padding: 1.5rem;
  }

  .gal__meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .gal__room {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.0625rem;
    color: var(--color-text);
  }

  .gal__service {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 700;
    padding: 0.2rem 0.75rem;
    background: color-mix(in srgb, var(--color-primary) 10%, transparent);
    border-radius: var(--radius-full);
    color: var(--color-primary);
  }

  .gal__desc {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    line-height: 1.5;
  }

  /* ── CTA Block ── */
  .cta-block {
    position: relative;
  }

  .cta-block__body {
    background: var(--color-primary);
    padding: 5rem 0;
    text-align: center;
  }

  .cta-block__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(2rem, 4vw, 2.75rem);
    color: white;
    margin-bottom: 1rem;
  }

  .cta-block__text {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.175rem;
    margin-bottom: 2.5rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-body);
    font-weight: 700;
    font-size: 1rem;
    padding: 0.875rem 2rem;
    border-radius: var(--radius-full);
    text-decoration: none;
    transition:
      transform 0.2s,
      box-shadow 0.2s;
  }

  .btn--white {
    background: white;
    color: var(--color-primary);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  }

  .btn--white:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 28px rgba(0, 0, 0, 0.12);
  }

  @media (max-width: 640px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
