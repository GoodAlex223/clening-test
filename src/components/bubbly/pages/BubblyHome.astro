---
/**
 * BubblyHome — Playful home page with floating bubbles, bouncy hero,
 * pastel service cards, bubble-shaped testimonials, and sparkle CTA.
 */
import type { CollectionEntry } from 'astro:content'
import { siteConfig } from '@lib/site-config'

interface Props {
  services: CollectionEntry<'services'>[]
  testimonials: CollectionEntry<'testimonials'>[]
}

const { services, testimonials } = Astro.props
---

<main data-page="home">
  {/* ── Hero ── */}
  <section class="hero">
    <div class="hero__inner">
      <div class="hero__text">
        <p class="hero__annotation">Making cleaning fun since 2019!</p>
        <h1 class="hero__title">
          <span class="hero__title-line">We Make</span>
          <span class="hero__title-line">Your Home</span>
          <span class="hero__title-line hero__title-line--accent">Sparkle!</span>
        </h1>
        <p class="hero__subtitle">
          Friendly, thorough cleaning that makes your space feel brand new. No stress, just sparkle.
        </p>
        <div class="hero__actions">
          <a href="/contact" class="btn btn--primary">Get Your Free Quote</a>
          <a href="/services" class="btn btn--ghost">Our Services</a>
        </div>
      </div>
      <div class="hero__art" aria-hidden="true">
        <div class="bubble bubble--1"></div>
        <div class="bubble bubble--2"></div>
        <div class="bubble bubble--3"></div>
        <div class="bubble bubble--4"></div>
        <div class="bubble bubble--5"></div>
        <svg
          class="hero__sparkle hero__sparkle--1"
          width="28"
          height="28"
          viewBox="0 0 24 24"
          fill="var(--color-accent)"
        >
          <path d="M12 0l2 8 8 1-8 2-2 8-2-8-8-2 8-1z"></path>
        </svg>
        <svg
          class="hero__sparkle hero__sparkle--2"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="var(--color-secondary)"
        >
          <path d="M12 0l2 8 8 1-8 2-2 8-2-8-8-2 8-1z"></path>
        </svg>
      </div>
    </div>

    {/* Wave divider */}
    <svg
      class="wave"
      viewBox="0 0 1200 80"
      preserveAspectRatio="none"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <path
        d="M0,40 Q200,10 400,40 T800,30 Q1000,50 1200,35 L1200,80 L0,80 Z"
        fill="var(--color-surface)"></path>
    </svg>
  </section>

  {/* ── Featured Services ── */}
  <section class="services-section">
    <div class="container">
      <div class="services-header reveal">
        <span class="section-label">What We Do</span>
        <h2 class="section-title">Our Awesome Services</h2>
      </div>
      <div class="svc-grid reveal-stagger reveal">
        {
          services.map((service) => (
            <article class="svc-card">
              <h3 class="svc-card__name">{service.data.name}</h3>
              <p class="svc-card__text">{service.data.tagline}</p>
              {service.data.startingPrice && (
                <p class="svc-card__price">
                  From ${service.data.startingPrice}
                  <span class="svc-card__unit">{service.data.priceUnit}</span>
                </p>
              )}
              <a href={`/services#${service.data.slug}`} class="svc-card__link">
                Learn More &rarr;
              </a>
            </article>
          ))
        }
      </div>
    </div>

    {/* Wave divider */}
    <svg
      class="wave wave--flip"
      viewBox="0 0 1200 80"
      preserveAspectRatio="none"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <path d="M0,40 Q300,0 600,35 T1200,30 L1200,80 L0,80 Z" fill="var(--color-background)"></path>
    </svg>
  </section>

  {/* ── Testimonials ── */}
  <section class="testimonials">
    <div class="container">
      <div class="testimonials-header reveal">
        <span class="section-label">Happy Clients</span>
        <h2 class="section-title">What People Are Saying</h2>
      </div>
      <div class="testi-grid reveal-stagger reveal">
        {
          testimonials.map((t) => (
            <blockquote class="testi">
              <div class="testi__stars" role="img" aria-label={`${t.data.rating} out of 5 stars`}>
                {Array.from({ length: t.data.rating }).map(() => (
                  <span class="testi__star" aria-hidden="true">
                    &#9733;
                  </span>
                ))}
              </div>
              <p class="testi__text">&ldquo;{t.data.text}&rdquo;</p>
              <footer class="testi__footer">
                <strong class="testi__author">{t.data.name}</strong>
                {t.data.location && <span class="testi__location">{t.data.location}</span>}
              </footer>
            </blockquote>
          ))
        }
      </div>
    </div>
  </section>

  {/* ── CTA ── */}
  <section class="cta-block reveal">
    <svg
      class="wave wave--cta-top"
      viewBox="0 0 1200 80"
      preserveAspectRatio="none"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <path d="M0,50 Q300,10 600,45 T1200,35 L1200,80 L0,80 Z" fill="var(--color-primary)"></path>
    </svg>
    <div class="cta-block__body">
      <div class="container">
        <h2 class="cta-block__title">Ready for a Sparkling Clean?</h2>
        <p class="cta-block__text">
          Serving {siteConfig.serviceAreas.slice(0, 5).join(', ')} and more. Call <a
            href={`tel:${siteConfig.phone}`}
            class="cta-block__phone">{siteConfig.phone}</a
          > or book online!
        </p>
        <a href="/contact" class="btn btn--white">Book Your Clean Today</a>
      </div>
    </div>
  </section>
</main>

<style>
  /* ═══════════════ HERO ═══════════════ */
  .hero {
    position: relative;
    padding: 5rem 0 0;
    overflow: hidden;
    background: var(--color-background);
  }

  .hero__inner {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 1.1fr 0.9fr;
    gap: 3rem;
    align-items: center;
    min-height: 70vh;
  }

  .hero__text {
    z-index: 2;
  }

  .hero__annotation {
    font-family: var(--font-accent);
    font-size: 1.25rem;
    color: #d946b2;
    margin-bottom: 1rem;
    opacity: 0;
    transform: translateY(20px);
    animation: bubblyBounceIn 0.6s cubic-bezier(0.68, -0.55, 0.27, 1.55) 0.2s forwards;
  }

  .hero__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(2.75rem, 5.5vw, 4rem);
    line-height: 1.15;
    color: var(--color-text);
    margin-bottom: 1.5rem;
  }

  .hero__title-line {
    display: block;
    opacity: 0;
    transform: translateY(30px);
  }

  .hero__title-line:nth-child(1) {
    animation: bubblyBounceIn 0.6s cubic-bezier(0.68, -0.55, 0.27, 1.55) 0.35s forwards;
  }

  .hero__title-line:nth-child(2) {
    animation: bubblyBounceIn 0.6s cubic-bezier(0.68, -0.55, 0.27, 1.55) 0.5s forwards;
  }

  .hero__title-line--accent {
    color: var(--color-primary);
    animation: bubblyBounceIn 0.6s cubic-bezier(0.68, -0.55, 0.27, 1.55) 0.65s forwards;
  }

  .hero__subtitle {
    font-size: 1.175rem;
    color: var(--color-text-muted);
    max-width: 460px;
    margin-bottom: 2.5rem;
    line-height: 1.7;
    opacity: 0;
    transform: translateY(20px);
    animation: bubblyBounceIn 0.6s cubic-bezier(0.68, -0.55, 0.27, 1.55) 0.8s forwards;
  }

  .hero__actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    opacity: 0;
    transform: translateY(20px);
    animation: bubblyBounceIn 0.6s ease 0.95s forwards;
  }

  @keyframes bubblyBounceIn {
    0% {
      opacity: 0;
      transform: translateY(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ── Floating bubbles ── */
  .hero__art {
    position: relative;
    width: 100%;
    height: 450px;
    opacity: 0;
    animation: bubblyBounceIn 1s ease 0.4s forwards;
  }

  .bubble {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
    opacity: 0.45;
    will-change: transform;
  }

  .bubble--1 {
    width: 140px;
    height: 140px;
    background: linear-gradient(135deg, #c4f5fc, rgba(196, 245, 252, 0.3));
    top: 10%;
    right: 15%;
    animation: float1 4s ease-in-out infinite;
  }

  .bubble--2 {
    width: 200px;
    height: 200px;
    background: linear-gradient(135deg, #f5e6ff, rgba(245, 230, 255, 0.3));
    top: 30%;
    right: 30%;
    animation: float2 5s ease-in-out infinite;
  }

  .bubble--3 {
    width: 90px;
    height: 90px;
    background: linear-gradient(135deg, #ffe4f0, rgba(255, 228, 240, 0.4));
    bottom: 25%;
    left: 10%;
    animation: float3 3.5s ease-in-out infinite;
  }

  .bubble--4 {
    width: 110px;
    height: 110px;
    background: linear-gradient(135deg, #c4f5fc, rgba(196, 245, 252, 0.3));
    top: 55%;
    right: 8%;
    animation: float1 4.5s ease-in-out infinite;
    animation-delay: -1.5s;
  }

  .bubble--5 {
    width: 65px;
    height: 65px;
    background: linear-gradient(135deg, #f5e6ff, rgba(245, 230, 255, 0.4));
    top: 5%;
    left: 25%;
    animation: float2 3s ease-in-out infinite;
    animation-delay: -2s;
  }

  .hero__sparkle {
    position: absolute;
    animation: sparkle 2s ease-in-out infinite;
  }

  .hero__sparkle--1 {
    top: 15%;
    right: 55%;
  }

  .hero__sparkle--2 {
    bottom: 30%;
    right: 20%;
    animation-delay: -0.7s;
  }

  @keyframes float1 {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  @keyframes float2 {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-30px);
    }
  }

  @keyframes float3 {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-15px);
    }
  }

  @keyframes sparkle {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.3;
      transform: scale(0.85);
    }
  }

  /* ═══════════════ WAVES ═══════════════ */
  .wave {
    display: block;
    width: 100%;
    height: 60px;
    margin-top: -1px;
  }

  .wave--flip {
    transform: scaleY(-1);
    margin-top: 0;
    margin-bottom: -1px;
  }

  .wave--cta-top {
    display: block;
    width: 100%;
    height: 60px;
    margin-bottom: -1px;
  }

  /* ═══════════════ BUTTONS ═══════════════ */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-body);
    font-weight: 700;
    font-size: 1rem;
    padding: 0.875rem 2rem;
    border-radius: var(--radius-full);
    text-decoration: none;
    transition:
      transform 0.2s,
      box-shadow 0.2s;
  }

  .btn:active {
    animation: jellySquish 150ms ease;
  }

  .btn--primary {
    background: var(--color-cta);
    color: var(--color-cta-text);
    box-shadow: 0 4px 16px rgba(124, 58, 237, 0.25);
  }

  .btn--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 28px rgba(124, 58, 237, 0.35);
  }

  .btn--ghost {
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
    background: transparent;
  }

  .btn--ghost:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }

  .btn--white {
    background: white;
    color: var(--color-primary);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  }

  .btn--white:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 28px rgba(0, 0, 0, 0.12);
  }

  @keyframes jellySquish {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(0.96);
    }
  }

  /* ═══════════════ SHARED ═══════════════ */
  .container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-label {
    display: block;
    font-family: var(--font-body);
    font-weight: 700;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .section-title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(2rem, 4vw, 2.5rem);
    text-align: center;
    color: var(--color-text);
  }

  /* ═══════════════ SERVICES ═══════════════ */
  .services-section {
    position: relative;
    padding: 4rem 0 0;
    background: var(--color-surface);
  }

  .services-header {
    margin-bottom: 3rem;
  }

  .svc-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    padding-bottom: 3rem;
  }

  .svc-card {
    background: white;
    border-radius: var(--radius-md);
    padding: 2.25rem 2rem;
    box-shadow: 0 2px 16px rgba(124, 58, 237, 0.06);
    transition:
      transform 0.25s ease,
      box-shadow 0.25s ease;
    position: relative;
    overflow: hidden;
  }

  .svc-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    border-radius: var(--radius-md) var(--radius-md) 0 0;
    background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
  }

  .svc-card:nth-child(3n + 2)::before {
    background: linear-gradient(90deg, var(--color-secondary), var(--color-accent));
  }

  .svc-card:nth-child(3n + 3)::before {
    background: linear-gradient(90deg, var(--color-accent), var(--color-primary));
  }

  .svc-card:hover {
    transform: translateY(-6px) rotate(-0.5deg);
    box-shadow: 0 12px 32px rgba(124, 58, 237, 0.12);
  }

  .svc-card__name {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.375rem;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .svc-card__text {
    color: var(--color-text-muted);
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.25rem;
  }

  .svc-card__price {
    font-family: var(--font-body);
    font-weight: 700;
    color: var(--color-primary);
    font-size: 1.125rem;
    margin-bottom: 0.75rem;
  }

  .svc-card__unit {
    font-weight: 400;
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .svc-card__link {
    display: inline-block;
    font-family: var(--font-body);
    font-weight: 700;
    font-size: 0.875rem;
    color: var(--color-primary);
    text-decoration: none;
    transition: color 0.2s;
  }

  .svc-card__link:hover {
    color: var(--color-primary);
  }

  /* ═══════════════ TESTIMONIALS ═══════════════ */
  .testimonials {
    padding: 5rem 0;
    background: var(--color-background);
  }

  .testimonials-header {
    margin-bottom: 3rem;
  }

  .testi-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .testi {
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    padding: 2.25rem 2rem;
    margin: 0;
    box-shadow: 0 2px 16px rgba(124, 58, 237, 0.06);
    transition: transform 0.25s ease;
  }

  .testi:hover {
    transform: translateY(-4px) rotate(0.5deg);
  }

  .testi__stars {
    display: flex;
    gap: 2px;
    margin-bottom: 1rem;
  }

  .testi__star {
    color: #d946b2;
    font-size: 1.25rem;
  }

  .testi__text {
    color: var(--color-text);
    font-size: 1.0625rem;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-style: italic;
  }

  .testi__footer {
    font-style: normal;
  }

  .testi__author {
    font-family: var(--font-body);
    font-weight: 700;
    color: var(--color-text);
    font-size: 1rem;
    display: block;
  }

  .testi__location {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  /* ═══════════════ CTA BLOCK ═══════════════ */
  .cta-block {
    position: relative;
    margin-top: 2rem;
  }

  .cta-block__body {
    background: var(--color-primary);
    padding: 5rem 0;
    text-align: center;
  }

  .cta-block__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(2rem, 4vw, 2.75rem);
    color: white;
    margin-bottom: 1rem;
  }

  .cta-block__text {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.175rem;
    max-width: 540px;
    margin: 0 auto 2.5rem;
    line-height: 1.6;
  }

  .cta-block__phone {
    color: white;
    text-decoration: underline;
    font-weight: 700;
  }

  /* ═══════════════ RESPONSIVE ═══════════════ */
  @media (max-width: 1024px) {
    .hero__inner {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .hero__subtitle {
      margin: 0 auto 2.5rem;
    }
    .hero__actions {
      justify-content: center;
    }
    .hero__art {
      height: 300px;
      margin: 0 auto;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 3rem 0 0;
    }

    .hero__art {
      height: 250px;
    }

    .btn {
      padding: 0.75rem 1.5rem;
      font-size: 0.9375rem;
    }
  }
</style>
