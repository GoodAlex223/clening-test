---
/**
 * MinimalNav — Zen-inspired sticky navigation.
 *
 * Logo left, centered links, ThemeSwitcher right.
 * Underline slides from left on hover (ink-brush feel).
 * Frosted glass effect on scroll. Mobile hamburger overlay.
 */
import type { ThemeId } from '@themes/types'
import ThemeSwitcher from '@components/shared/ThemeSwitcher.astro'

interface Props {
  currentTheme: ThemeId
  currentPath?: string
}

const { currentTheme, currentPath = Astro.url.pathname } = Astro.props

const links = [
  { label: 'Services', href: '/services' },
  { label: 'About', href: '/about' },
  { label: 'Pricing', href: '/pricing' },
  { label: 'Gallery', href: '/gallery' },
  { label: 'Contact', href: '/contact' },
]
---

<header class="mn" id="minimal-nav">
  <div class="mn__inner">
    <a href="/" class="mn__logo" aria-label="CleanSpark — Home"> CleanSpark </a>

    <nav class="mn__links" aria-label="Main navigation">
      {
        links.map((link) => (
          <a
            href={link.href}
            class:list={[
              'mn__link',
              {
                'mn__link--active':
                  currentPath === link.href || (currentPath === '/' && link.href === '/'),
              },
            ]}
            aria-current={currentPath === link.href ? 'page' : undefined}
          >
            {link.label}
          </a>
        ))
      }
    </nav>

    <div class="mn__right">
      <ThemeSwitcher currentTheme={currentTheme} client:load />
      <button
        type="button"
        class="mn__burger"
        aria-label="Open menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <span class="mn__burger-line"></span>
        <span class="mn__burger-line"></span>
      </button>
    </div>
  </div>
</header>

{/* Mobile overlay menu */}
<div class="mn-mobile" id="mobile-menu" aria-hidden="true">
  <nav class="mn-mobile__nav" aria-label="Mobile navigation">
    {
      links.map((link, i) => (
        <a
          href={link.href}
          class:list={['mn-mobile__link', { 'mn-mobile__link--active': currentPath === link.href }]}
          style={`--delay: ${i * 60}ms`}
          aria-current={currentPath === link.href ? 'page' : undefined}
          tabindex="-1"
        >
          {link.label}
        </a>
      ))
    }
  </nav>
</div>

<script>
  import { initScrollSpy } from '@lib/scroll-spy'

  function initMinimalNav(): void {
    const nav = document.getElementById('minimal-nav')
    const burgerEl = nav?.querySelector<HTMLButtonElement>('.mn__burger')
    const menuEl = document.getElementById('mobile-menu')
    if (!nav || !burgerEl || !menuEl) return
    if (nav.dataset.navInit === 'true') return
    nav.dataset.navInit = 'true'

    const burger = burgerEl
    const mobileMenu = menuEl

    // Frosted glass on scroll
    const onScroll = (): void => {
      nav.classList.toggle('mn--scrolled', window.scrollY > 20)
    }
    window.addEventListener('scroll', onScroll, { passive: true })
    onScroll()

    const mobileLinks = mobileMenu.querySelectorAll<HTMLAnchorElement>('a')

    let isMenuOpen = false

    function openMenu(): void {
      isMenuOpen = true
      mobileMenu.style.opacity = '1'
      mobileMenu.style.visibility = 'visible'
      mobileMenu.setAttribute('aria-hidden', 'false')
      burger.setAttribute('aria-expanded', 'true')
      burger.classList.add('mn__burger--open')
      document.body.style.overflow = 'hidden'
      mobileLinks.forEach((l) => {
        l.removeAttribute('tabindex')
        l.style.opacity = '1'
        l.style.transform = 'translateY(0)'
      })
      mobileLinks[0]?.focus()
    }

    function closeMenu(): void {
      isMenuOpen = false
      mobileMenu.style.opacity = '0'
      mobileMenu.style.visibility = 'hidden'
      mobileMenu.setAttribute('aria-hidden', 'true')
      burger.setAttribute('aria-expanded', 'false')
      burger.classList.remove('mn__burger--open')
      document.body.style.overflow = ''
      mobileLinks.forEach((l) => {
        l.setAttribute('tabindex', '-1')
        l.style.opacity = '0'
        l.style.transform = 'translateY(12px)'
      })
      burger.focus()
    }

    // Mobile menu toggle
    burger.addEventListener('click', () => {
      if (isMenuOpen) closeMenu()
      else openMenu()
    })

    // Escape key closes menu
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isMenuOpen) {
        closeMenu()
      }
    })

    // Close mobile menu on link click
    mobileLinks.forEach((link) => {
      link.addEventListener('click', closeMenu)
    })

    // Scroll-spy for active nav link highlighting
    scrollSpyCleanup?.()
    scrollSpyCleanup = initScrollSpy({
      linkSelector: '.mn__link',
      activeClass: 'mn__link--active',
    })
  }

  let scrollSpyCleanup: (() => void) | undefined
  initMinimalNav()
  document.addEventListener('astro:page-load', initMinimalNav)
</script>

<style>
  /* ── Sticky header ── */
  .mn {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--color-background);
    transition:
      background 300ms ease,
      box-shadow 300ms ease;
  }

  .mn--scrolled {
    background: color-mix(in srgb, var(--color-background) 85%, transparent);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    box-shadow: 0 1px 0 color-mix(in srgb, var(--color-text) 6%, transparent);
  }

  .mn__inner {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 4rem;
  }

  /* ── Logo ── */
  .mn__logo {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 1.375rem;
    color: var(--color-primary);
    text-decoration: none;
    letter-spacing: -0.01em;
    flex-shrink: 0;
  }

  /* ── Desktop links ── */
  .mn__links {
    display: flex;
    gap: 2.5rem;
    align-items: center;
  }

  .mn__link {
    position: relative;
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.8125rem;
    font-weight: 400;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    padding-bottom: 2px;
    transition: color 200ms ease;
  }

  .mn__link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--color-primary);
    transition: width 300ms cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .mn__link:hover,
  .mn__link--active {
    color: var(--color-primary);
  }

  .mn__link:hover::after,
  .mn__link--active::after {
    width: 100%;
  }

  /* ── Right side ── */
  .mn__right {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0;
  }

  /* ── Hamburger ── */
  .mn__burger {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 2rem;
    height: 2rem;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .mn__burger-line {
    display: block;
    width: 100%;
    height: 1px;
    background: var(--color-primary);
    transition:
      transform 300ms ease,
      opacity 200ms ease;
    transform-origin: center;
  }

  .mn__burger--open .mn__burger-line:first-child {
    transform: translateY(3px) rotate(45deg);
  }

  .mn__burger--open .mn__burger-line:last-child {
    transform: translateY(-3px) rotate(-45deg);
  }

  /* ── Mobile overlay ── */
  .mn-mobile {
    position: fixed;
    inset: 0;
    z-index: 99;
    background: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
  }

  .mn-mobile__nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .mn-mobile__link {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 300;
    color: var(--color-text);
    text-decoration: none;
    letter-spacing: 0.02em;
    opacity: 0;
    transform: translateY(12px);
    transition: color 200ms ease;
  }

  .mn-mobile__link:hover,
  .mn-mobile__link--active {
    color: var(--color-primary);
  }

  /* ── Responsive ── */
  @media (max-width: 768px) {
    .mn__links {
      display: none;
    }

    .mn__burger {
      display: flex;
    }

    /* Hide theme switcher on mobile — shown in footer instead */
    .mn__right :global(.theme-switcher) {
      display: none;
    }
  }
</style>
