---
/**
 * MinimalAbout — Company story, values, team, service areas.
 */
import type { CollectionEntry } from 'astro:content'
import { siteConfig } from '@lib/site-config'

interface Props {
  team: CollectionEntry<'team'>[]
}

const { team } = Astro.props

const values = [
  { title: 'Quality First', desc: 'We never cut corners. Every surface, every room, every time.' },
  { title: 'Fair & Transparent', desc: 'No hidden fees. Fair wages for our team. Honest pricing for our clients.' },
  { title: 'Eco-Conscious', desc: 'Green cleaning products and sustainable practices as standard.' },
  { title: 'Reliable', desc: 'On time, every time. Consistent results you can count on.' },
]
---

<main data-page="about">
  {/* ── Page header ── */}
  <section class="page-header">
    <div class="container">
      <h1 class="page-header__title">About CleanSpark</h1>
      <p class="page-header__subtitle">Seattle's trusted cleaning experts since 2019.</p>
    </div>
  </section>

  {/* ── Story + Values ── */}
  <section class="section reveal">
    <div class="container">
      <div class="two-col">
        <div class="two-col__left">
          <span class="label">Our Story</span>
          <h2 class="heading-2">How We Started</h2>
          <p class="body-text">
            CleanSpark was born from a simple belief: everyone deserves a clean, healthy space — and every cleaner deserves fair pay and respect. Founded in 2019, we started as a one-person operation in a Seattle studio apartment with a vacuum, a bucket, and a vision.
          </p>
          <p class="body-text">
            Today, we're a team of dedicated professionals serving homes and businesses across the greater Seattle area. We've completed over 5,000 cleans, maintained a 4.9-star rating, and built something we're truly proud of.
          </p>
        </div>
        <div class="two-col__right">
          <span class="label">What We Believe</span>
          <h2 class="heading-2">Our Values</h2>
          <ul class="values-list">
            {values.map((v) => (
              <li class="value">
                <strong class="value__title">{v.title}</strong>
                <p class="value__desc">{v.desc}</p>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  {/* ── Team ── */}
  <section class="section section--surface reveal">
    <div class="container">
      <h2 class="section__title">Meet Our Team</h2>
      <div class="team-grid reveal-stagger">
        {team.map((member) => (
          <article class="member" data-member={member.data.id}>
            <div class="member__avatar" aria-hidden="true">
              {member.data.name.charAt(0)}
            </div>
            <h3 class="member__name">{member.data.name}</h3>
            <p class="member__role">{member.data.role}</p>
            <p class="member__bio">
              {member.data.bio.length > 200 ? member.data.bio.slice(0, 200) + '...' : member.data.bio}
            </p>
            {member.data.certifications && member.data.certifications.length > 0 && (
              <div class="member__certs">
                {member.data.certifications.map((cert) => (
                  <span class="member__cert">{cert}</span>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>
    </div>
  </section>

  {/* ── Service Areas ── */}
  <section class="section reveal" style="text-align: center;">
    <div class="container">
      <h2 class="section__title">Proudly Serving</h2>
      <p class="areas">{siteConfig.serviceAreas.join(' \u00B7 ')}</p>
    </div>
  </section>
</main>

<style>
  /* ── Page header ── */
  .page-header {
    padding: var(--section-padding) 1.5rem 3rem;
    text-align: center;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(0.9375rem, 2vw, 1.125rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ── Shared ── */
  .section {
    padding: 4rem 1.5rem;
  }

  .section--surface {
    background: var(--color-surface);
  }

  .section__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--color-primary);
    text-align: center;
    margin-bottom: 3rem;
  }

  .container {
    max-width: var(--container-max);
    margin: 0 auto;
  }

  .label {
    display: block;
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-accent);
    margin-bottom: 0.5rem;
  }

  .heading-2 {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.5rem;
    color: var(--color-primary);
    margin-bottom: 1.25rem;
  }

  .body-text {
    color: var(--color-text);
    line-height: 1.7;
    margin-bottom: 1rem;
    font-size: 0.9375rem;
  }

  /* ── Two columns ── */
  .two-col {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  /* ── Values ── */
  .values-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .value__title {
    font-family: var(--font-heading);
    font-weight: 500;
    color: var(--color-primary);
    font-size: 0.9375rem;
  }

  .value__desc {
    color: var(--color-text-muted);
    font-size: 0.8125rem;
    margin-top: 0.25rem;
    line-height: 1.5;
  }

  /* ── Team ── */
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 1.5rem;
  }

  .member {
    background: var(--color-background);
    border-radius: var(--radius-sm);
    padding: 2rem;
    text-align: center;
  }

  .member__avatar {
    width: 4rem;
    height: 4rem;
    border-radius: var(--radius-full);
    background: color-mix(in srgb, var(--color-primary) 8%, transparent);
    margin: 0 auto 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 300;
    color: var(--color-primary);
  }

  .member__name {
    font-family: var(--font-heading);
    font-weight: 500;
    font-size: 1.0625rem;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .member__role {
    color: var(--color-accent);
    font-size: 0.8125rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
  }

  .member__bio {
    color: var(--color-text-muted);
    font-size: 0.8125rem;
    line-height: 1.6;
  }

  .member__certs {
    margin-top: 0.75rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    justify-content: center;
  }

  .member__cert {
    font-size: 0.6875rem;
    padding: 0.2rem 0.5rem;
    background: color-mix(in srgb, var(--color-primary) 6%, transparent);
    border-radius: var(--radius-full);
    color: var(--color-primary);
  }

  .areas {
    color: var(--color-text-muted);
    font-size: 1rem;
    line-height: 1.8;
  }

  @media (max-width: 768px) {
    .two-col {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }
</style>
