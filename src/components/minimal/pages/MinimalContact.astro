---
/**
 * MinimalContact — Contact form + info cards + service areas.
 */
import type { CollectionEntry } from 'astro:content'
import { siteConfig, getFullAddress } from '@lib/site-config'

interface Props {
  services: CollectionEntry<'services'>[]
}

const { services } = Astro.props
---

<main data-page="contact">
  {/* ── Page header ── */}
  <section class="page-header">
    <div class="container">
      <h1 class="page-header__title">Get in Touch</h1>
      <p class="page-header__subtitle">
        Ready to experience the CleanSpark difference? Let's talk.
      </p>
    </div>
  </section>

  {/* ── Contact content ── */}
  <section class="contact reveal">
    <div class="container">
      <div class="contact__grid">
        {/* ── Form ── */}
        <div>
          <h2 class="contact__heading">Request a Free Quote</h2>
          <form id="contact-form" class="form">
            <label class="field">
              <span class="field__label">Name *</span>
              <input type="text" name="name" required autocomplete="name" class="field__input" data-field="name" />
              <span class="field__error" data-error="name"></span>
            </label>
            <label class="field">
              <span class="field__label">Email *</span>
              <input type="email" name="email" required autocomplete="email" class="field__input" data-field="email" />
              <span class="field__error" data-error="email"></span>
            </label>
            <label class="field">
              <span class="field__label">Phone</span>
              <input type="tel" name="phone" autocomplete="tel" class="field__input" data-field="phone" />
              <span class="field__error" data-error="phone"></span>
            </label>
            <label class="field">
              <span class="field__label">Service Interest</span>
              <select name="service" class="field__input" data-field="service">
                <option value="">Select a service (optional)</option>
                {services.map((s) => <option value={s.data.slug}>{s.data.name}</option>)}
              </select>
              <span class="field__error" data-error="service"></span>
            </label>
            <label class="field">
              <span class="field__label">Message *</span>
              <textarea name="message" required rows={5} class="field__input field__input--textarea" data-field="message"
              ></textarea>
              <span class="field__error" data-error="message"></span>
            </label>
            <button type="submit" class="btn btn--primary btn--full">Send Message</button>
          </form>
        </div>

        {/* ── Info cards ── */}
        <div class="info-stack">
          <h2 class="contact__heading">Contact Information</h2>

          <article class="info-card">
            <h3 class="info-card__title">Call Us</h3>
            <a href={`tel:${siteConfig.phone}`} class="info-card__link">{siteConfig.phone}</a>
          </article>

          <article class="info-card">
            <h3 class="info-card__title">Email Us</h3>
            <a href={`mailto:${siteConfig.email}`} class="info-card__link">{siteConfig.email}</a>
          </article>

          <article class="info-card">
            <h3 class="info-card__title">Visit Us</h3>
            <address class="info-card__text">{getFullAddress()}</address>
          </article>

          <article class="info-card">
            <h3 class="info-card__title">Business Hours</h3>
            <ul class="info-card__hours">
              <li>{siteConfig.hours.weekday}</li>
              <li>{siteConfig.hours.saturday}</li>
              <li>{siteConfig.hours.sunday}</li>
            </ul>
          </article>

          <article class="info-card">
            <h3 class="info-card__title">Follow Us</h3>
            <div class="info-card__social">
              <a href={siteConfig.social.facebook} target="_blank" rel="noopener noreferrer"
                >Facebook</a
              >
              <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer"
                >Instagram</a
              >
              <a href={siteConfig.social.yelp} target="_blank" rel="noopener noreferrer">Yelp</a>
            </div>
          </article>
        </div>
      </div>
    </div>
  </section>

  {/* ── Service areas ── */}
  <section class="areas reveal">
    <div class="container">
      <h2 class="areas__title">We Serve</h2>
      <p class="areas__list">{siteConfig.serviceAreas.join(' \u00B7 ')}</p>
    </div>
  </section>
</main>

<script>
  import { validateField, validateForm } from '@lib/contact-validation'
  import type { ContactFieldName } from '@lib/contact-validation'

  function initContactForm(): void {
    const form = document.getElementById('contact-form') as HTMLFormElement | null
    if (!form) return
    if (form.dataset.validationInit === 'true') return
    form.dataset.validationInit = 'true'

    function showError(fieldName: string, message: string): void {
      const errorSpan = form!.querySelector<HTMLElement>(`[data-error="${fieldName}"]`)
      const input = form!.querySelector<HTMLElement>(`[data-field="${fieldName}"]`)
      if (errorSpan) errorSpan.textContent = message
      if (input) input.setAttribute('aria-invalid', 'true')
    }

    function clearError(fieldName: string): void {
      const errorSpan = form!.querySelector<HTMLElement>(`[data-error="${fieldName}"]`)
      const input = form!.querySelector<HTMLElement>(`[data-field="${fieldName}"]`)
      if (errorSpan) errorSpan.textContent = ''
      if (input) input.setAttribute('aria-invalid', 'false')
    }

    const fields = form.querySelectorAll<HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement>('[data-field]')
    fields.forEach((field) => {
      field.addEventListener('blur', () => {
        const name = field.dataset.field as ContactFieldName
        const error = validateField(name, field.value)
        if (error) showError(name, error)
        else clearError(name)
      })
    })

    form.addEventListener('submit', (e) => {
      e.preventDefault()
      fields.forEach((f) => clearError(f.dataset.field!))

      const result = validateForm(new FormData(form))
      if (!result.success) {
        Object.entries(result.errors).forEach(([field, message]) => {
          if (message) showError(field, message)
        })
        form.querySelector<HTMLElement>('[aria-invalid="true"]')?.focus()
        return
      }

      const btn = form.querySelector('button[type="submit"]') as HTMLButtonElement
      const originalText = btn.textContent
      btn.textContent = 'Message Sent!'
      btn.disabled = true
      btn.style.opacity = '0.7'
      form.reset()
      fields.forEach((f) => clearError(f.dataset.field!))
      setTimeout(() => {
        btn.textContent = originalText
        btn.disabled = false
        btn.style.opacity = ''
      }, 3000)
    })
  }

  initContactForm()
  document.addEventListener('astro:page-load', initContactForm)
</script>

<style>
  .page-header {
    padding: var(--section-padding) 1.5rem 3rem;
    text-align: center;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(0.9375rem, 2vw, 1.125rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .container {
    max-width: var(--container-max);
    margin: 0 auto;
  }

  /* ── Contact layout ── */
  .contact {
    padding: 0 1.5rem 3rem;
  }

  .contact__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  .contact__heading {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.5rem;
    color: var(--color-primary);
    margin-bottom: 1.5rem;
  }

  /* ── Form ── */
  .form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .field {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .field__label {
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--color-text);
    letter-spacing: 0.01em;
  }

  .field__input {
    padding: 0.625rem 0.75rem;
    border: 1px solid color-mix(in srgb, var(--color-text) 15%, transparent);
    border-radius: var(--radius-sm);
    font-size: 0.9375rem;
    font-family: var(--font-body);
    background: var(--color-surface);
    color: var(--color-text);
    transition: border-color 200ms ease;
  }

  .field__input:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .field__input--textarea {
    resize: vertical;
    min-height: 120px;
  }

  .field__input[aria-invalid='true'] {
    border-color: #dc2626;
  }

  .field__error {
    font-size: 0.75rem;
    color: #dc2626;
    min-height: 1rem;
    line-height: 1.3;
  }

  /* ── Info cards ── */
  .info-stack {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .info-card {
    background: var(--color-surface);
    border-radius: var(--radius-sm);
    padding: 1.25rem;
    border: 1px solid color-mix(in srgb, var(--color-text) 6%, transparent);
  }

  .info-card__title {
    font-family: var(--font-heading);
    font-weight: 500;
    font-size: 0.875rem;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .info-card__link {
    color: var(--color-text);
    text-decoration: none;
    font-size: 1rem;
    transition: color 200ms ease;
  }

  .info-card__link:hover {
    color: var(--color-primary);
  }

  .info-card__text {
    font-style: normal;
    color: var(--color-text);
    font-size: 0.9375rem;
    line-height: 1.5;
  }

  .info-card__hours {
    list-style: none;
    padding: 0;
    margin: 0;
    color: var(--color-text);
    font-size: 0.875rem;
    line-height: 1.8;
  }

  .info-card__social {
    display: flex;
    gap: 1rem;
  }

  .info-card__social a {
    color: var(--color-primary);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: opacity 200ms ease;
  }

  .info-card__social a:hover {
    opacity: 0.7;
  }

  /* ── Buttons ── */
  .btn {
    display: inline-block;
    padding: 0.875rem 2.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border: none;
    border-radius: var(--radius-sm);
    letter-spacing: 0.02em;
    cursor: pointer;
    font-family: var(--font-body);
    transition: all 200ms ease;
  }

  .btn--primary {
    background: var(--color-cta);
    color: var(--color-cta-text);
  }

  .btn--primary:hover {
    opacity: 0.88;
    transform: translateY(-1px);
  }

  .btn--full {
    width: 100%;
  }

  /* ── Service areas ── */
  .areas {
    padding: var(--section-padding) 1.5rem;
    text-align: center;
    background: var(--color-surface);
  }

  .areas__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.5rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .areas__list {
    color: var(--color-text-muted);
    font-size: 1rem;
    line-height: 1.8;
  }

  @media (max-width: 768px) {
    .contact__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
