---
/**
 * MinimalGallery — Filterable before/after photo grid.
 */
import type { CollectionEntry } from 'astro:content'

interface Props {
  gallery: CollectionEntry<'gallery'>[]
  uniqueServices: string[]
}

const { gallery, uniqueServices } = Astro.props
---

<main data-page="gallery">
  {/* ── Page header ── */}
  <section class="page-header">
    <div class="container">
      <h1 class="page-header__title">Our Work</h1>
      <p class="page-header__subtitle">See the CleanSpark difference in action. Real projects, real results.</p>
    </div>
  </section>

  {/* ── Filters ── */}
  <section class="filters">
    <div class="container">
      <div class="filter-bar">
        <button data-filter="all" class="filter filter--active" type="button" aria-pressed="true">All</button>
        {uniqueServices.map((service) => (
          <button data-filter={service} class="filter" type="button" aria-pressed="false">{service}</button>
        ))}
      </div>
    </div>
  </section>

  {/* ── Gallery grid ── */}
  <section class="section reveal">
    <div class="container">
      <div class="gallery-grid reveal-stagger">
        {gallery.map((item, i) => (
          <article class="gal" data-gallery-item data-service={item.data.service}>
            <div class="gal__images">
              <div class="gal__img-wrap">
                <img
                  src={item.data.before}
                  alt={`Before: ${item.data.room} - ${item.data.service}`}
                  loading={i < 4 ? 'eager' : 'lazy'}
                  class="gal__img"
                />
                <span class="gal__label">Before</span>
              </div>
              <div class="gal__img-wrap">
                <img
                  src={item.data.after}
                  alt={`After: ${item.data.room} - ${item.data.service}`}
                  loading={i < 4 ? 'eager' : 'lazy'}
                  class="gal__img"
                />
                <span class="gal__label">After</span>
              </div>
            </div>
            <div class="gal__info">
              <div class="gal__meta">
                <span class="gal__room">{item.data.room}</span>
                <span class="gal__service">{item.data.service}</span>
              </div>
              <p class="gal__desc">{item.data.description}</p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  {/* ── CTA ── */}
  <section class="cta reveal">
    <div class="container">
      <h2 class="cta__title">Want Results Like These?</h2>
      <p class="cta__text">Every space has potential. Let us show you yours.</p>
      <a href="/contact" class="btn btn--primary">Book Your Clean</a>
    </div>
  </section>
</main>

<script>
  function initGalleryFilter(): void {
    const buttons = document.querySelectorAll<HTMLButtonElement>('[data-filter]')
    const items = document.querySelectorAll<HTMLElement>('[data-gallery-item]')

    buttons.forEach((btn) => {
      btn.addEventListener('click', () => {
        const filter = btn.dataset.filter

        buttons.forEach((b) => {
          const isActive = b === btn
          b.classList.toggle('filter--active', isActive)
          b.setAttribute('aria-pressed', String(isActive))
        })

        items.forEach((item) => {
          const matches = filter === 'all' || item.dataset.service === filter
          item.style.display = matches ? '' : 'none'
        })
      })
    })
  }

  initGalleryFilter()
</script>

<style>
  .page-header {
    padding: var(--section-padding) 1.5rem 3rem;
    text-align: center;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(0.9375rem, 2vw, 1.125rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .section {
    padding: 0 1.5rem 3rem;
  }

  .container {
    max-width: var(--container-max);
    margin: 0 auto;
  }

  /* ── Filters ── */
  .filters {
    padding: 0 1.5rem 2.5rem;
  }

  .filter-bar {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
  }

  .filter {
    padding: 0.5rem 1.25rem;
    border: 1px solid var(--color-primary);
    border-radius: var(--radius-full);
    background: transparent;
    color: var(--color-primary);
    cursor: pointer;
    font-size: 0.8125rem;
    font-weight: 400;
    transition: all 200ms ease;
  }

  .filter:hover {
    background: color-mix(in srgb, var(--color-primary) 6%, transparent);
  }

  .filter--active {
    background: var(--color-primary);
    color: var(--color-cta-text);
  }

  /* ── Gallery grid ── */
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 1.5rem;
  }

  .gal {
    background: var(--color-surface);
    border-radius: var(--radius-sm);
    overflow: hidden;
    border: 1px solid color-mix(in srgb, var(--color-text) 6%, transparent);
    transition: transform 200ms ease, box-shadow 200ms ease;
  }

  .gal:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
  }

  .gal__images {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .gal__img-wrap {
    position: relative;
  }

  .gal__img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    display: block;
  }

  .gal__label {
    position: absolute;
    top: 0.5rem;
    left: 0.5rem;
    background: rgba(0, 0, 0, 0.55);
    color: white;
    font-size: 0.625rem;
    font-weight: 500;
    padding: 0.15rem 0.5rem;
    border-radius: var(--radius-full);
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  .gal__info {
    padding: 1.25rem;
  }

  .gal__meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .gal__room {
    font-family: var(--font-heading);
    font-weight: 500;
    font-size: 0.9375rem;
    color: var(--color-primary);
  }

  .gal__service {
    font-size: 0.6875rem;
    padding: 0.2rem 0.5rem;
    background: color-mix(in srgb, var(--color-primary) 6%, transparent);
    border-radius: var(--radius-full);
    color: var(--color-primary);
  }

  .gal__desc {
    color: var(--color-text-muted);
    font-size: 0.8125rem;
    line-height: 1.5;
  }

  /* ── CTA ── */
  .cta {
    padding: var(--section-padding) 1.5rem;
    text-align: center;
    background: var(--color-surface);
  }

  .cta__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .cta__text {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: var(--radius-sm);
    letter-spacing: 0.02em;
    transition: all 200ms ease;
  }

  .btn--primary {
    background: var(--color-cta);
    color: var(--color-cta-text);
  }

  .btn--primary:hover {
    opacity: 0.88;
    transform: translateY(-1px);
  }

  @media (max-width: 640px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
