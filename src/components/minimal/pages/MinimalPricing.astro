---
/**
 * MinimalPricing — 3 pricing tiers, FAQ, CTA.
 */
import type { CollectionEntry } from 'astro:content'
import { siteConfig } from '@lib/site-config'

interface Props {
  pricing: CollectionEntry<'pricing'>[]
}

const { pricing } = Astro.props

const faqs = [
  {
    q: 'Do I need to be home during the cleaning?',
    a: 'Not at all. Many clients give us a key or access code. All our team members are background-checked, insured, and bonded.',
  },
  {
    q: "What if I'm not satisfied with the cleaning?",
    a: "We have a 100% satisfaction guarantee. If anything isn't up to your standards, we'll re-clean it free of charge within 24 hours.",
  },
  {
    q: 'Do you bring your own supplies and equipment?',
    a: "Yes! We bring all eco-friendly cleaning products and professional-grade equipment. You don't need to supply anything.",
  },
  {
    q: 'Can I customize my cleaning plan?',
    a: "Absolutely. While our tiers give you a starting point, we're happy to add or adjust services to match your specific needs. Just let us know when you book.",
  },
  {
    q: 'How do I pay?',
    a: 'We accept all major credit cards and send invoices via email after each visit. No cash needed, no upfront payments.',
  },
]
---

<main data-page="pricing">
  {/* ── Page header ── */}
  <section class="page-header">
    <div class="container">
      <h1 class="page-header__title">Transparent Pricing</h1>
      <p class="page-header__subtitle">
        No hidden fees. No surprises. Just clean, competitive rates.
      </p>
    </div>
  </section>

  {/* ── Pricing tiers ── */}
  <section class="section reveal">
    <div class="container">
      <div class="tiers reveal-stagger">
        {
          pricing.map((tier) => (
            <article
              class:list={['tier', { 'tier--highlighted': tier.data.highlighted }]}
              data-tier={tier.data.id}
            >
              {tier.data.highlighted && <span class="tier__badge">Most Popular</span>}
              <h2 class="tier__name">{tier.data.name}</h2>
              <p class="tier__tagline">{tier.data.tagline}</p>
              <div class="tier__price-block">
                <span class="tier__price">${tier.data.price}</span>
                <span class="tier__unit">{tier.data.priceUnit}</span>
              </div>
              {tier.data.frequency && <p class="tier__freq">{tier.data.frequency}</p>}
              <ul class="tier__features">
                {tier.data.features.map((f) => (
                  <li class:list={['tier__feature', { 'tier__feature--excluded': !f.included }]}>
                    <span aria-hidden="true">{f.included ? '\u2713' : '\u2717'}</span>
                    {f.text}
                  </li>
                ))}
              </ul>
              <a
                href={tier.data.ctaUrl}
                class:list={['tier__cta', { 'tier__cta--filled': tier.data.highlighted }]}
              >
                {tier.data.ctaText}
              </a>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  {/* ── FAQ ── */}
  <section class="section section--surface reveal">
    <div class="container container--narrow">
      <h2 class="section__title">Frequently Asked Questions</h2>
      <div class="faq-list">
        {
          faqs.map((faq) => (
            <details class="faq">
              <summary class="faq__q">{faq.q}</summary>
              <p class="faq__a">{faq.a}</p>
            </details>
          ))
        }
      </div>
    </div>
  </section>

  {/* ── CTA ── */}
  <section class="cta reveal">
    <div class="container">
      <h2 class="cta__title">Ready to Get Started?</h2>
      <p class="cta__text">
        Book online or call us at <a href={`tel:${siteConfig.phone}`} class="cta__phone"
          >{siteConfig.phone}</a
        >.
      </p>
      <a href="/contact" class="btn btn--primary">Get Your Free Quote</a>
    </div>
  </section>
</main>

<style>
  .page-header {
    padding: var(--section-padding) 1.5rem 3rem;
    text-align: center;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(0.9375rem, 2vw, 1.125rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .section {
    padding: 3rem 1.5rem;
  }

  .section--surface {
    background: var(--color-surface);
  }

  .section__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--color-primary);
    text-align: center;
    margin-bottom: 3rem;
  }

  .container {
    max-width: var(--container-max);
    margin: 0 auto;
  }

  .container--narrow {
    max-width: 720px;
  }

  /* ── Tiers ── */
  .tiers {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    align-items: start;
  }

  .tier {
    background: var(--color-surface);
    border-radius: var(--radius-sm);
    padding: 2.5rem 2rem;
    text-align: center;
    border: 1px solid color-mix(in srgb, var(--color-text) 6%, transparent);
    position: relative;
  }

  .tier--highlighted {
    border-color: var(--color-primary);
    border-width: 2px;
  }

  .tier__badge {
    position: absolute;
    top: -0.75rem;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-primary);
    color: var(--color-cta-text);
    font-size: 0.6875rem;
    font-weight: 500;
    padding: 0.25rem 1rem;
    border-radius: var(--radius-full);
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  .tier__name {
    font-family: var(--font-heading);
    font-weight: 500;
    font-size: 1.375rem;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .tier__tagline {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
  }

  .tier__price-block {
    margin-bottom: 0.25rem;
  }

  .tier__price {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 2.75rem;
    color: var(--color-primary);
    letter-spacing: -0.02em;
  }

  .tier__unit {
    color: var(--color-text-muted);
    font-size: 0.8125rem;
  }

  .tier__freq {
    color: var(--color-text-muted);
    font-size: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .tier__features {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem;
    text-align: left;
  }

  .tier__feature {
    padding: 0.375rem 0;
    font-size: 0.8125rem;
    color: var(--color-text);
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }

  .tier__feature--excluded {
    color: var(--color-text-muted);
    text-decoration: line-through;
    opacity: 0.5;
  }

  .tier__cta {
    display: block;
    width: 100%;
    padding: 0.875rem;
    text-align: center;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    border-radius: var(--radius-sm);
    border: 1.5px solid var(--color-primary);
    color: var(--color-primary);
    background: transparent;
    transition: all 200ms ease;
    box-sizing: border-box;
  }

  .tier__cta:hover {
    background: var(--color-primary);
    color: var(--color-cta-text);
  }

  .tier__cta--filled {
    background: var(--color-cta);
    color: var(--color-cta-text);
    border-color: var(--color-cta);
  }

  .tier__cta--filled:hover {
    opacity: 0.88;
  }

  /* ── FAQ ── */
  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .faq {
    border-bottom: 1px solid color-mix(in srgb, var(--color-text) 8%, transparent);
    padding: 1.25rem 0;
  }

  .faq__q {
    font-family: var(--font-heading);
    font-weight: 500;
    font-size: 0.9375rem;
    color: var(--color-primary);
    cursor: pointer;
    padding: 0;
    list-style: none;
  }

  .faq__q::-webkit-details-marker {
    display: none;
  }

  .faq__q::marker {
    content: '';
  }

  .faq__q::after {
    content: '+';
    float: right;
    font-weight: 300;
    font-size: 1.25rem;
    line-height: 1;
    transition: transform 200ms ease;
  }

  .faq[open] .faq__q::after {
    content: '\2212';
  }

  .faq__a {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    line-height: 1.7;
    margin-top: 0.75rem;
    padding-left: 0;
  }

  /* ── CTA ── */
  .cta {
    padding: var(--section-padding) 1.5rem;
    text-align: center;
  }

  .cta__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .cta__text {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .cta__phone {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: var(--radius-sm);
    letter-spacing: 0.02em;
    transition: all 200ms ease;
  }

  .btn--primary {
    background: var(--color-cta);
    color: var(--color-cta-text);
  }

  .btn--primary:hover {
    opacity: 0.88;
    transform: translateY(-1px);
  }
</style>
