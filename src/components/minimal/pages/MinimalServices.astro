---
/**
 * MinimalServices — Service catalog with category grouping.
 *
 * Page header, categorized service cards, process steps, CTA.
 */
import type { CollectionEntry } from 'astro:content'
import { siteConfig } from '@lib/site-config'

interface Props {
  services: CollectionEntry<'services'>[]
}

const { services } = Astro.props

const categories = ['residential', 'commercial', 'specialty'] as const
const categoryLabels: Record<string, string> = {
  residential: 'Residential',
  commercial: 'Commercial',
  specialty: 'Specialty',
}

const servicesByCategory = Object.fromEntries(
  categories.map((cat) => [cat, services.filter((s) => s.data.category === cat)])
) as Record<(typeof categories)[number], typeof services>
---

<main data-page="services">
  {/* ── Page header ── */}
  <section class="page-header">
    <div class="container">
      <h1 class="page-header__title">Our Services</h1>
      <p class="page-header__subtitle">
        From routine home cleaning to post-construction cleanup, we have the expertise to make any
        space shine.
      </p>
    </div>
  </section>

  {/* ── Service categories ── */}
  {
    categories.map((category) => (
      <section class="section reveal" data-section={`services-${category}`}>
        <div class="container">
          <div class="cat-header">
            <span class="cat-header__label">{categoryLabels[category]}</span>
            <h2 class="cat-header__title">{categoryLabels[category]} Services</h2>
          </div>
          <div class="service-grid reveal-stagger">
            {servicesByCategory[category].map((service) => (
              <article class="svc" id={service.data.slug} data-service={service.data.slug}>
                <div class="svc__top">
                  <h3 class="svc__name">{service.data.name}</h3>
                  <p class="svc__tagline">{service.data.tagline}</p>
                </div>
                <ul class="svc__features">
                  {service.data.features.slice(0, 4).map((feature) => (
                    <li class="svc__feature">
                      <span class="svc__check" aria-hidden="true">
                        &#10003;
                      </span>
                      {feature}
                    </li>
                  ))}
                </ul>
                <div class="svc__bottom">
                  {service.data.startingPrice && (
                    <span class="svc__price">
                      From ${service.data.startingPrice} {service.data.priceUnit}
                    </span>
                  )}
                  <a href="/contact" class="svc__cta">
                    Get a Quote
                  </a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    ))
  }

  {/* ── CTA ── */}
  <section class="cta reveal">
    <div class="container">
      <h2 class="cta__title">Not Sure Which Service You Need?</h2>
      <p class="cta__text">
        Call us at <a href={`tel:${siteConfig.phone}`} class="cta__phone">{siteConfig.phone}</a> or get
        a free quote online.
      </p>
      <a href="/contact" class="btn btn--primary">Request a Free Quote</a>
    </div>
  </section>
</main>

<style>
  /* ── Page header ── */
  .page-header {
    padding: var(--section-padding) 1.5rem 3rem;
    text-align: center;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(0.9375rem, 2vw, 1.125rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ── Section ── */
  .section {
    padding: 3rem 1.5rem;
  }

  .container {
    max-width: var(--container-max);
    margin: 0 auto;
  }

  /* ── Category header ── */
  .cat-header {
    margin-bottom: 2rem;
  }

  .cat-header__label {
    display: block;
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
  }

  .cat-header__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.5rem;
    color: var(--color-primary);
  }

  /* ── Service grid ── */
  .service-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  /* ── Service card ── */
  .svc {
    background: var(--color-surface);
    border-radius: var(--radius-sm);
    padding: 2rem;
    display: flex;
    flex-direction: column;
    border: 1px solid color-mix(in srgb, var(--color-text) 6%, transparent);
    transition:
      transform 200ms ease,
      box-shadow 200ms ease;
  }

  .svc:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
  }

  .svc__top {
    margin-bottom: 1rem;
  }

  .svc__name {
    font-family: var(--font-heading);
    font-weight: 500;
    font-size: 1.125rem;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .svc__tagline {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .svc__features {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem;
    flex: 1;
  }

  .svc__feature {
    padding: 0.3rem 0;
    font-size: 0.8125rem;
    color: var(--color-text);
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }

  .svc__check {
    color: var(--color-primary);
    font-size: 0.75rem;
    flex-shrink: 0;
  }

  .svc__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid color-mix(in srgb, var(--color-text) 6%, transparent);
  }

  .svc__price {
    font-family: var(--font-heading);
    font-weight: 500;
    font-size: 1rem;
    color: var(--color-primary);
  }

  .svc__cta {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    background: var(--color-cta);
    color: var(--color-cta-text);
    border-radius: var(--radius-sm);
    text-decoration: none;
    font-size: 0.8125rem;
    font-weight: 500;
    transition: opacity 200ms ease;
  }

  .svc__cta:hover {
    opacity: 0.88;
  }

  /* ── CTA ── */
  .cta {
    padding: var(--section-padding) 1.5rem;
    text-align: center;
    background: var(--color-surface);
  }

  .cta__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .cta__text {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .cta__phone {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: var(--radius-sm);
    letter-spacing: 0.02em;
    transition: all 200ms ease;
  }

  .btn--primary {
    background: var(--color-cta);
    color: var(--color-cta-text);
  }

  .btn--primary:hover {
    opacity: 0.88;
    transform: translateY(-1px);
  }

  @media (max-width: 640px) {
    .service-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
