---
/**
 * NoirAbout — Elegant company story, gold-accented values, and team cards
 * on dark surfaces with thin borders.
 */
import type { CollectionEntry } from 'astro:content'
import { siteConfig } from '@lib/site-config'

interface Props {
  team: CollectionEntry<'team'>[]
}

const { team } = Astro.props

const values = [
  {
    title: 'Quality First',
    desc: 'We never cut corners. Every surface, every room, every time.',
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"/></svg>`,
  },
  {
    title: 'Fair & Transparent',
    desc: 'No hidden fees. Fair wages for our team. Honest pricing for our clients.',
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none"><path d="M12 22C12 22 20 18 20 12V5L12 2L4 5V12C4 18 12 22 12 22Z" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"/></svg>`,
  },
  {
    title: 'Eco-Conscious',
    desc: 'Green cleaning products and sustainable practices as standard.',
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none"><path d="M12 22V8M12 8C12 8 7 3 2 3C2 8 7 13 12 8ZM12 8C12 8 17 3 22 3C22 8 17 13 12 8Z" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"/></svg>`,
  },
  {
    title: 'Reliable',
    desc: 'On time, every time. Consistent results you can count on.',
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none"><circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="1"/><path d="M12 6V12L16 14" stroke="currentColor" stroke-width="1" stroke-linecap="round"/></svg>`,
  },
]
---

<main data-page="about">
  {/* -- Page header -- */}
  <section class="page-header">
    <div class="container">
      <p class="section-label">Who We Are</p>
      <h1 class="page-header__title">About CleanSpark</h1>
      <p class="page-header__subtitle">
        Seattle's premier cleaning service, delivering impeccable results since 2019.
      </p>
    </div>
  </section>

  {/* -- Story -- */}
  <section class="story reveal">
    <div class="container">
      <div class="story__grid">
        <div class="story__content">
          <p class="section-label section-label--left">Our Story</p>
          <h2 class="section-heading">How We Started</h2>
          <p class="body-text">
            CleanSpark was born from a simple belief: everyone deserves a clean, healthy space — and
            every cleaner deserves fair pay and respect. Founded in 2019, we started as a one-person
            operation in a Seattle studio apartment with a vacuum, a bucket, and a vision.
          </p>
          <p class="body-text">
            Today, we're a team of dedicated professionals serving homes and businesses across the
            greater Seattle area. We've completed over 5,000 cleans, maintained a 4.9-star rating,
            and built something we're truly proud of.
          </p>
        </div>
        <div class="story__art" aria-hidden="true">
          <div class="story-diamond">
            <div class="story-diamond__shape"></div>
            <div class="story-diamond__inner"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* -- Values -- */}
  <section class="values-section">
    <div class="container">
      <div class="values-header reveal">
        <div class="gold-rule"></div>
        <p class="section-label">What Drives Us</p>
        <h2 class="section-heading section-heading--center">Our Values</h2>
      </div>
      <div class="values-grid reveal-stagger reveal">
        {
          values.map((v) => (
            <article class="value-card">
              <span class="value-card__icon" aria-hidden="true" set:html={v.icon} />
              <h3 class="value-card__title">{v.title}</h3>
              <p class="value-card__desc">{v.desc}</p>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  {/* -- Team -- */}
  <section class="team-section">
    <div class="container">
      <div class="team-header reveal">
        <p class="section-label">The People Behind the Quality</p>
        <h2 class="section-heading section-heading--center">Meet Our Team</h2>
      </div>
      <div class="team-grid reveal-stagger reveal">
        {
          team.map((member) => (
            <article class="member" data-member={member.data.id}>
              <div class="member__avatar" aria-hidden="true">
                {member.data.name.charAt(0)}
              </div>
              <h3 class="member__name">{member.data.name}</h3>
              <p class="member__role">{member.data.role}</p>
              <p class="member__bio">
                {member.data.bio.length > 200
                  ? member.data.bio.slice(0, 200) + '...'
                  : member.data.bio}
              </p>
              {member.data.certifications && member.data.certifications.length > 0 && (
                <div class="member__certs">
                  {member.data.certifications.map((cert) => (
                    <span class="member__cert">{cert}</span>
                  ))}
                </div>
              )}
            </article>
          ))
        }
      </div>
    </div>
  </section>

  {/* -- Service Areas -- */}
  <section class="areas reveal">
    <div class="container">
      <div class="gold-rule"></div>
      <h2 class="areas__title">Proudly Serving</h2>
      <p class="areas__list">{siteConfig.serviceAreas.join(' \u00B7 ')}</p>
    </div>
  </section>
</main>

<style>
  /* -- Page header -- */
  .page-header {
    padding: var(--section-padding) 2rem 3rem;
    text-align: center;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(0.9375rem, 2vw, 1.125rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* -- Shared -- */
  .container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-label {
    display: block;
    font-family: var(--font-body);
    font-weight: 300;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    text-align: center;
  }

  .section-label--left {
    text-align: left;
  }

  .section-heading {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    color: var(--color-text);
    margin-bottom: 1.5rem;
  }

  .section-heading--center {
    text-align: center;
  }

  .body-text {
    color: var(--color-text-muted);
    line-height: 1.8;
    margin-bottom: 1rem;
    font-size: 1rem;
    font-weight: 300;
  }

  /* -- Story -- */
  .story {
    padding: 4rem 2rem;
    background: var(--color-surface);
  }

  .story__grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 4rem;
    align-items: center;
  }

  .story__art {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 280px;
  }

  .story-diamond {
    position: relative;
    width: 140px;
    height: 140px;
  }

  .story-diamond__shape {
    position: absolute;
    inset: 0;
    border: 1px solid var(--color-primary);
    transform: rotate(45deg);
    opacity: 0.4;
  }

  .story-diamond__inner {
    position: absolute;
    inset: 20px;
    border: 1px solid var(--color-primary);
    transform: rotate(45deg);
    opacity: 0.2;
  }

  /* -- Values -- */
  .values-section {
    padding: 5rem 2rem;
  }

  .values-header {
    margin-bottom: 3rem;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  .value-card {
    background: var(--color-surface);
    border: 1px solid #2a2a2a;
    border-radius: var(--radius-sm);
    padding: 2rem;
    text-align: center;
    transition:
      border-color 0.4s ease,
      box-shadow 0.4s ease;
  }

  .value-card:hover {
    border-color: var(--color-primary);
    box-shadow: 0 0 20px rgba(201, 169, 110, 0.08);
  }

  .value-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .value-card__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.0625rem;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .value-card__desc {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    line-height: 1.7;
    font-weight: 300;
  }

  /* -- Team -- */
  .team-section {
    padding: 5rem 2rem;
    background: var(--color-surface);
  }

  .team-header {
    margin-bottom: 3rem;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 1.5rem;
  }

  .member {
    background: var(--color-background);
    border: 1px solid #2a2a2a;
    border-radius: var(--radius-sm);
    padding: 2rem;
    text-align: center;
    transition:
      border-color 0.4s ease,
      box-shadow 0.4s ease;
  }

  .member:hover {
    border-color: var(--color-primary);
    box-shadow: 0 0 20px rgba(201, 169, 110, 0.08);
  }

  .member__avatar {
    width: 4rem;
    height: 4rem;
    border-radius: var(--radius-full);
    border: 1px solid var(--color-primary);
    color: var(--color-primary);
    margin: 0 auto 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 400;
  }

  .member__name {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.0625rem;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .member__role {
    font-family: var(--font-body);
    font-weight: 300;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .member__bio {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    line-height: 1.7;
    font-weight: 300;
  }

  .member__certs {
    margin-top: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    justify-content: center;
  }

  .member__cert {
    font-size: 0.6875rem;
    padding: 0.25rem 0.75rem;
    border: 1px solid rgba(201, 169, 110, 0.3);
    border-radius: var(--radius-sm);
    color: var(--color-primary);
    font-weight: 300;
    letter-spacing: 0.05em;
  }

  /* -- Areas -- */
  .areas {
    padding: var(--section-padding) 2rem;
    text-align: center;
  }

  .areas__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.75rem;
    color: var(--color-text);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .areas__list {
    color: var(--color-text-muted);
    font-size: 1rem;
    line-height: 2;
    font-weight: 300;
  }

  @media (max-width: 768px) {
    .story__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .story__art {
      height: 160px;
    }
  }
</style>
