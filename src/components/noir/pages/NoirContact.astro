---
/**
 * NoirContact â€” Dark contact form with gold-focused inputs,
 * elegant info cards, and service areas.
 */
import type { CollectionEntry } from 'astro:content'
import { siteConfig, getFullAddress } from '@lib/site-config'

interface Props {
  services: CollectionEntry<'services'>[]
}

const { services } = Astro.props
---

<main data-page="contact">
  {/* -- Page header -- */}
  <section class="page-header">
    <div class="container">
      <p class="section-label">Get in Touch</p>
      <h1 class="page-header__title">Contact Us</h1>
      <p class="page-header__subtitle">
        We'd be delighted to hear from you. Request a consultation and we'll respond promptly.
      </p>
    </div>
  </section>

  {/* -- Contact content -- */}
  <section class="contact reveal">
    <div class="container">
      <div class="contact__grid">
        {/* -- Form -- */}
        <div class="contact__form-wrap">
          <h2 class="contact__heading">Request a Free Quote</h2>
          <form id="contact-form" class="form">
            <label class="field">
              <span class="field__label">Name *</span>
              <input type="text" name="name" required autocomplete="name" class="field__input" />
            </label>
            <label class="field">
              <span class="field__label">Email *</span>
              <input type="email" name="email" required autocomplete="email" class="field__input" />
            </label>
            <label class="field">
              <span class="field__label">Phone</span>
              <input type="tel" name="phone" autocomplete="tel" class="field__input" />
            </label>
            <label class="field">
              <span class="field__label">Service Interest</span>
              <select name="service" class="field__input">
                <option value="">Select a service (optional)</option>
                {services.map((s) => <option value={s.data.slug}>{s.data.name}</option>)}
              </select>
            </label>
            <label class="field">
              <span class="field__label">Message *</span>
              <textarea name="message" required rows={5} class="field__input field__input--textarea"
              ></textarea>
            </label>
            <button type="submit" class="btn btn--gold btn--full">Send Message</button>
          </form>
        </div>

        {/* -- Info cards -- */}
        <div class="info-stack reveal-stagger">
          <h2 class="contact__heading">Contact Information</h2>

          <article class="info-card">
            <h3 class="info-card__title">Call Us</h3>
            <a href={`tel:${siteConfig.phone}`} class="info-card__link">{siteConfig.phone}</a>
          </article>

          <article class="info-card">
            <h3 class="info-card__title">Email Us</h3>
            <a href={`mailto:${siteConfig.email}`} class="info-card__link">{siteConfig.email}</a>
          </article>

          <article class="info-card">
            <h3 class="info-card__title">Visit Us</h3>
            <address class="info-card__text">{getFullAddress()}</address>
          </article>

          <article class="info-card">
            <h3 class="info-card__title">Business Hours</h3>
            <ul class="info-card__hours">
              <li>{siteConfig.hours.weekday}</li>
              <li>{siteConfig.hours.saturday}</li>
              <li>{siteConfig.hours.sunday}</li>
            </ul>
          </article>

          <article class="info-card">
            <h3 class="info-card__title">Follow Us</h3>
            <div class="info-card__social">
              <a href={siteConfig.social.facebook} target="_blank" rel="noopener noreferrer"
                >Facebook</a
              >
              <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer"
                >Instagram</a
              >
              <a href={siteConfig.social.yelp} target="_blank" rel="noopener noreferrer">Yelp</a>
            </div>
          </article>
        </div>
      </div>
    </div>
  </section>

  {/* -- Service areas -- */}
  <section class="areas reveal">
    <div class="container">
      <div class="gold-rule"></div>
      <h2 class="areas__title">We Serve</h2>
      <p class="areas__list">{siteConfig.serviceAreas.join(' \u00B7 ')}</p>
    </div>
  </section>
</main>

<script>
  function initNoirContactForm(): void {
    const form = document.getElementById('contact-form') as HTMLFormElement | null
    if (!form) return

    form.addEventListener('submit', (e) => {
      e.preventDefault()
      if (!form.checkValidity()) {
        form.reportValidity()
        return
      }
      const btn = form.querySelector('button[type="submit"]') as HTMLButtonElement
      const originalText = btn.textContent
      btn.textContent = 'Message Sent'
      btn.disabled = true
      btn.style.opacity = '0.6'
      form.reset()
      setTimeout(() => {
        btn.textContent = originalText
        btn.disabled = false
        btn.style.opacity = ''
      }, 3000)
    })
  }

  initNoirContactForm()
</script>

<style>
  /* -- Page header -- */
  .page-header {
    padding: var(--section-padding) 2rem 3rem;
    text-align: center;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(0.9375rem, 2vw, 1.125rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* -- Shared -- */
  .container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-label {
    display: block;
    font-family: var(--font-body);
    font-weight: 300;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    text-align: center;
  }

  /* -- Contact layout -- */
  .contact {
    padding: 0 0 4rem;
  }

  .contact__grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 3rem;
    align-items: start;
  }

  .contact__heading {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.5rem;
    color: var(--color-text);
    margin-bottom: 1.5rem;
  }

  /* -- Form -- */
  .contact__form-wrap {
    background: var(--color-surface);
    border: 1px solid #2a2a2a;
    border-radius: var(--radius-sm);
    padding: 2.5rem;
  }

  .form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .field {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .field__label {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 400;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  .field__input {
    padding: 0.75rem 1rem;
    border: 1px solid #2a2a2a;
    border-radius: var(--radius-sm);
    font-size: 0.9375rem;
    font-family: var(--font-body);
    font-weight: 300;
    background: var(--color-background);
    color: var(--color-text);
    transition:
      border-color 0.3s ease,
      box-shadow 0.3s ease;
  }

  .field__input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 2px rgba(201, 169, 110, 0.15);
  }

  .field__input--textarea {
    resize: vertical;
    min-height: 120px;
  }

  /* -- Buttons -- */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-body);
    font-weight: 400;
    font-size: 0.8125rem;
    padding: 0.875rem 2rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    border-radius: var(--radius-sm);
    text-decoration: none;
    border: 1px solid var(--color-primary);
    cursor: pointer;
    transition:
      background 0.3s ease,
      color 0.3s ease;
  }

  .btn--gold {
    background: var(--color-cta);
    color: var(--color-cta-text);
  }

  .btn--gold:hover {
    background: transparent;
    color: var(--color-primary);
  }

  .btn--full {
    width: 100%;
  }

  /* -- Info cards -- */
  .info-stack {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .info-card {
    background: var(--color-surface);
    border: 1px solid #2a2a2a;
    border-radius: var(--radius-sm);
    padding: 1.25rem;
    transition:
      border-color 0.4s ease,
      box-shadow 0.4s ease;
  }

  .info-card:hover {
    border-color: rgba(201, 169, 110, 0.4);
    box-shadow: 0 0 16px rgba(201, 169, 110, 0.06);
  }

  .info-card__title {
    font-family: var(--font-body);
    font-weight: 400;
    font-size: 0.6875rem;
    color: var(--color-primary);
    margin-bottom: 0.375rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  .info-card__link {
    color: var(--color-text);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 400;
    transition: color 0.3s ease;
  }

  .info-card__link:hover {
    color: var(--color-primary);
  }

  .info-card__text {
    font-style: normal;
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    line-height: 1.6;
    font-weight: 300;
  }

  .info-card__hours {
    list-style: none;
    padding: 0;
    margin: 0;
    color: var(--color-text-muted);
    font-size: 0.875rem;
    line-height: 1.8;
    font-weight: 300;
  }

  .info-card__social {
    display: flex;
    gap: 1.25rem;
  }

  .info-card__social a {
    color: var(--color-primary);
    text-decoration: none;
    font-family: var(--font-body);
    font-size: 0.8125rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: color 0.3s ease;
  }

  .info-card__social a:hover {
    color: var(--color-secondary);
  }

  /* -- Service areas -- */
  .areas {
    padding: var(--section-padding) 2rem;
    text-align: center;
  }

  .areas__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.75rem;
    color: var(--color-text);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .areas__list {
    color: var(--color-text-muted);
    font-size: 1rem;
    line-height: 2;
    font-weight: 300;
  }

  @media (max-width: 768px) {
    .contact__grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
  }
</style>
