---
/**
 * NoirGallery â€” Filterable before/after gallery with grayscale-to-color
 * hover effect, dark cards, thin gold borders.
 */
import type { CollectionEntry } from 'astro:content'

interface Props {
  gallery: CollectionEntry<'gallery'>[]
  uniqueServices: string[]
}

const { gallery, uniqueServices } = Astro.props
---

<main data-page="gallery">
  {/* -- Page header -- */}
  <section class="page-header">
    <div class="container">
      <p class="section-label">Portfolio</p>
      <h1 class="page-header__title">Our Work</h1>
      <p class="page-header__subtitle">
        Real transformations. See the standard of care we bring to every space.
      </p>
    </div>
  </section>

  {/* -- Filters -- */}
  <section class="filters">
    <div class="container">
      <div class="filter-bar">
        <button data-filter="all" class="filter filter--active" type="button" aria-pressed="true"
          >All</button
        >
        {
          uniqueServices.map((service) => (
            <button data-filter={service} class="filter" type="button" aria-pressed="false">
              {service}
            </button>
          ))
        }
      </div>
    </div>
  </section>

  {/* -- Gallery grid -- */}
  <section class="gallery-section reveal">
    <div class="container">
      <div class="gallery-grid reveal-stagger">
        {
          gallery.map((item, i) => (
            <article class="gal" data-gallery-item data-service={item.data.service}>
              <div class="gal__images">
                <div class="gal__img-wrap">
                  <img
                    src={item.data.before}
                    alt={`Before: ${item.data.room} - ${item.data.service}`}
                    loading={i < 4 ? 'eager' : 'lazy'}
                    class="gal__img"
                  />
                  <span class="gal__label">Before</span>
                </div>
                <div class="gal__img-wrap">
                  <img
                    src={item.data.after}
                    alt={`After: ${item.data.room} - ${item.data.service}`}
                    loading={i < 4 ? 'eager' : 'lazy'}
                    class="gal__img"
                  />
                  <span class="gal__label gal__label--after">After</span>
                </div>
              </div>
              <div class="gal__info">
                <div class="gal__meta">
                  <span class="gal__room">{item.data.room}</span>
                  <span class="gal__service">{item.data.service}</span>
                </div>
                <p class="gal__desc">{item.data.description}</p>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  {/* -- CTA -- */}
  <section class="cta reveal">
    <div class="container">
      <div class="gold-rule"></div>
      <h2 class="cta__title">Want Results Like These?</h2>
      <p class="cta__text">Every space has potential. Let us reveal yours.</p>
      <a href="/contact" class="btn btn--gold">Book Your Clean</a>
    </div>
  </section>
</main>

<script>
  function initNoirGalleryFilter(): void {
    const buttons = document.querySelectorAll<HTMLButtonElement>('[data-filter]')
    const items = document.querySelectorAll<HTMLElement>('[data-gallery-item]')

    buttons.forEach((btn) => {
      btn.addEventListener('click', () => {
        const filter = btn.dataset.filter

        buttons.forEach((b) => {
          const isActive = b === btn
          b.classList.toggle('filter--active', isActive)
          b.setAttribute('aria-pressed', String(isActive))
        })

        items.forEach((item) => {
          const matches = filter === 'all' || item.dataset.service === filter
          item.style.display = matches ? '' : 'none'
        })
      })
    })
  }

  initNoirGalleryFilter()
</script>

<style>
  /* -- Page header -- */
  .page-header {
    padding: var(--section-padding) 2rem 3rem;
    text-align: center;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(0.9375rem, 2vw, 1.125rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* -- Shared -- */
  .container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-label {
    display: block;
    font-family: var(--font-body);
    font-weight: 300;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    text-align: center;
  }

  /* -- Filters -- */
  .filters {
    padding: 0 0 2.5rem;
  }

  .filter-bar {
    display: flex;
    flex-wrap: wrap;
    gap: 0.625rem;
    justify-content: center;
  }

  .filter {
    padding: 0.5rem 1.5rem;
    border: 1px solid #2a2a2a;
    border-radius: var(--radius-sm);
    background: transparent;
    color: var(--color-text-muted);
    cursor: pointer;
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    transition:
      border-color 0.3s ease,
      color 0.3s ease,
      background 0.3s ease;
  }

  .filter:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  .filter--active {
    background: var(--color-primary);
    color: var(--color-cta-text);
    border-color: var(--color-primary);
  }

  /* -- Gallery grid -- */
  .gallery-section {
    padding: 0 0 4rem;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 1.5rem;
  }

  .gal {
    background: var(--color-surface);
    border: 1px solid #2a2a2a;
    border-radius: var(--radius-sm);
    overflow: hidden;
    transition:
      border-color 0.4s ease,
      box-shadow 0.4s ease;
  }

  .gal:hover {
    border-color: var(--color-primary);
    box-shadow: 0 0 20px rgba(201, 169, 110, 0.08);
  }

  .gal__images {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .gal__img-wrap {
    position: relative;
    overflow: hidden;
  }

  .gal__img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    display: block;
    filter: grayscale(60%);
    transition:
      filter 0.4s ease,
      transform 0.4s ease;
  }

  .gal:hover .gal__img {
    filter: grayscale(0%);
    transform: scale(1.03);
  }

  .gal__label {
    position: absolute;
    top: 0.625rem;
    left: 0.625rem;
    background: rgba(15, 15, 15, 0.8);
    color: var(--color-text-muted);
    font-family: var(--font-body);
    font-size: 0.625rem;
    font-weight: 400;
    padding: 0.2rem 0.75rem;
    border-radius: var(--radius-sm);
    letter-spacing: 0.15em;
    text-transform: uppercase;
  }

  .gal__label--after {
    background: var(--color-primary);
    color: var(--color-cta-text);
  }

  .gal__info {
    padding: 1.25rem;
  }

  .gal__meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .gal__room {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1rem;
    color: var(--color-text);
  }

  .gal__service {
    font-family: var(--font-body);
    font-size: 0.6875rem;
    font-weight: 400;
    padding: 0.2rem 0.75rem;
    border: 1px solid rgba(201, 169, 110, 0.3);
    border-radius: var(--radius-sm);
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .gal__desc {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    line-height: 1.6;
    font-weight: 300;
  }

  /* -- CTA -- */
  .cta {
    padding: var(--section-padding) 2rem;
    text-align: center;
  }

  .cta__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--color-text);
    margin-top: 2.5rem;
    margin-bottom: 0.75rem;
  }

  .cta__text {
    color: var(--color-text-muted);
    font-size: 1rem;
    margin-bottom: 2rem;
    font-weight: 300;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2.25rem;
    font-size: 0.8125rem;
    font-weight: 400;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    border-radius: var(--radius-sm);
    transition:
      background 0.3s ease,
      color 0.3s ease;
  }

  .btn--gold {
    background: var(--color-cta);
    color: var(--color-cta-text);
    border: 1px solid var(--color-primary);
  }

  .btn--gold:hover {
    background: transparent;
    color: var(--color-primary);
  }

  @media (max-width: 640px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
