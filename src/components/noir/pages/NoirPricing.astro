---
/**
 * NoirPricing â€” Elegant dark pricing cards with gold accents,
 * native FAQ accordion, and outlined CTA.
 */
import type { CollectionEntry } from 'astro:content'
import { siteConfig } from '@lib/site-config'

interface Props {
  pricing: CollectionEntry<'pricing'>[]
}

const { pricing } = Astro.props

const faqs = [
  {
    q: 'Do I need to be home during the cleaning?',
    a: 'Not at all. Many clients give us a key or access code. All our team members are background-checked, insured, and bonded.',
  },
  {
    q: "What if I'm not satisfied with the cleaning?",
    a: "We have a 100% satisfaction guarantee. If anything isn't up to your standards, we'll re-clean it free of charge within 24 hours.",
  },
  {
    q: 'Do you bring your own supplies and equipment?',
    a: "Yes. We bring all eco-friendly cleaning products and professional-grade equipment. You don't need to supply anything.",
  },
  {
    q: 'Can I customize my cleaning plan?',
    a: "Absolutely. While our tiers give you a starting point, we're happy to add or adjust services to match your specific needs.",
  },
  {
    q: 'How do I pay?',
    a: 'We accept all major credit cards and send invoices via email after each visit. No cash needed, no upfront payments.',
  },
]
---

<main data-page="pricing">
  {/* -- Page header -- */}
  <section class="page-header">
    <div class="container">
      <p class="section-label">Investment</p>
      <h1 class="page-header__title">Transparent Pricing</h1>
      <p class="page-header__subtitle">
        No hidden fees. Straightforward rates for an exceptional standard of service.
      </p>
    </div>
  </section>

  {/* -- Pricing tiers -- */}
  <section class="tiers-section reveal">
    <div class="container">
      <div class="tiers reveal-stagger">
        {
          pricing.map((tier) => (
            <article
              class:list={['tier', { 'tier--popular': tier.data.highlighted }]}
              data-tier={tier.data.id}
            >
              {tier.data.highlighted && <span class="tier__badge">Recommended</span>}
              <h2 class="tier__name">{tier.data.name}</h2>
              <p class="tier__tagline">{tier.data.tagline}</p>
              <div class="tier__price-block">
                <span class="tier__price">${tier.data.price}</span>
                <span class="tier__unit">{tier.data.priceUnit}</span>
              </div>
              {tier.data.frequency && <p class="tier__freq">{tier.data.frequency}</p>}
              <ul class="tier__features">
                {tier.data.features.map((f) => (
                  <li class:list={['tier__feature', { 'tier__feature--excluded': !f.included }]}>
                    <span aria-hidden="true" class="tier__feature-icon">
                      {f.included ? '\u2713' : '\u2717'}
                    </span>
                    {f.text}
                  </li>
                ))}
              </ul>
              <a
                href={tier.data.ctaUrl}
                class:list={['tier__cta', { 'tier__cta--filled': tier.data.highlighted }]}
              >
                {tier.data.ctaText}
              </a>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  {/* -- FAQ -- */}
  <section class="faq-section reveal">
    <div class="container container--narrow">
      <div class="faq-header">
        <div class="gold-rule"></div>
        <p class="section-label">Common Questions</p>
        <h2 class="section-heading">Frequently Asked</h2>
      </div>
      <div class="faq-list">
        {
          faqs.map((faq) => (
            <details class="faq">
              <summary class="faq__q">{faq.q}</summary>
              <p class="faq__a">{faq.a}</p>
            </details>
          ))
        }
      </div>
    </div>
  </section>

  {/* -- CTA -- */}
  <section class="cta reveal">
    <div class="container">
      <div class="gold-rule"></div>
      <h2 class="cta__title">Ready to Experience the Difference?</h2>
      <p class="cta__text">
        Book online or call us at <a href={`tel:${siteConfig.phone}`} class="cta__phone"
          >{siteConfig.phone}</a
        >.
      </p>
      <a href="/contact" class="btn btn--gold">Book Your Clean</a>
    </div>
  </section>
</main>

<style>
  /* -- Page header -- */
  .page-header {
    padding: var(--section-padding) 2rem 3rem;
    text-align: center;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(0.9375rem, 2vw, 1.125rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* -- Shared -- */
  .container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 2rem;
  }
  .container--narrow {
    max-width: 720px;
  }

  .section-label {
    display: block;
    font-family: var(--font-body);
    font-weight: 300;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    text-align: center;
  }

  .section-heading {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    color: var(--color-text);
    text-align: center;
    margin-bottom: 2.5rem;
  }

  /* -- Tiers -- */
  .tiers-section {
    padding: 0 0 4rem;
  }

  .tiers {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    align-items: start;
  }

  .tier {
    background: var(--color-surface);
    border: 1px solid #2a2a2a;
    border-radius: var(--radius-sm);
    padding: 2.5rem 2rem;
    text-align: center;
    position: relative;
    transition:
      border-color 0.4s ease,
      box-shadow 0.4s ease;
  }

  .tier:hover {
    border-color: rgba(201, 169, 110, 0.4);
    box-shadow: 0 0 20px rgba(201, 169, 110, 0.08);
  }

  .tier--popular {
    border-color: var(--color-primary);
    box-shadow: 0 0 30px rgba(201, 169, 110, 0.1);
  }

  .tier--popular:hover {
    box-shadow: 0 0 40px rgba(201, 169, 110, 0.15);
  }

  .tier__badge {
    position: absolute;
    top: -0.75rem;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-primary);
    color: var(--color-cta-text);
    font-family: var(--font-body);
    font-size: 0.6875rem;
    font-weight: 400;
    padding: 0.25rem 1.25rem;
    border-radius: var(--radius-sm);
    letter-spacing: 0.15em;
    text-transform: uppercase;
    white-space: nowrap;
  }

  .tier__name {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.5rem;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .tier__tagline {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
    font-weight: 300;
  }

  .tier__price-block {
    margin-bottom: 0.25rem;
  }

  .tier__price {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 3rem;
    color: var(--color-primary);
  }

  .tier__unit {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    font-weight: 300;
  }

  .tier__freq {
    color: var(--color-text-muted);
    font-size: 0.8125rem;
    margin-bottom: 1.5rem;
    font-weight: 300;
  }

  .tier__features {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem;
    text-align: left;
  }

  .tier__feature {
    padding: 0.4rem 0;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    display: flex;
    align-items: baseline;
    gap: 0.625rem;
    font-weight: 300;
  }

  .tier__feature-icon {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .tier__feature--excluded {
    color: #555;
    text-decoration: line-through;
    opacity: 0.5;
  }

  .tier__feature--excluded .tier__feature-icon {
    color: #555;
  }

  .tier__cta {
    display: block;
    width: 100%;
    padding: 0.875rem;
    text-align: center;
    text-decoration: none;
    font-family: var(--font-body);
    font-weight: 400;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    border-radius: var(--radius-sm);
    border: 1px solid var(--color-primary);
    color: var(--color-primary);
    background: transparent;
    transition:
      background 0.3s ease,
      color 0.3s ease;
    box-sizing: border-box;
  }

  .tier__cta:hover {
    background: var(--color-primary);
    color: var(--color-cta-text);
  }

  .tier__cta--filled {
    background: var(--color-cta);
    color: var(--color-cta-text);
    border-color: var(--color-cta);
  }

  .tier__cta--filled:hover {
    background: transparent;
    color: var(--color-primary);
    border-color: var(--color-primary);
  }

  /* -- FAQ -- */
  .faq-section {
    padding: 4rem 0;
    background: var(--color-surface);
  }

  .faq-header {
    margin-bottom: 2rem;
  }

  .faq-list {
    display: flex;
    flex-direction: column;
  }

  .faq {
    border-bottom: 1px solid #2a2a2a;
    padding: 1.5rem 0;
  }

  .faq__q {
    font-family: var(--font-body);
    font-weight: 400;
    font-size: 1rem;
    color: var(--color-text);
    cursor: pointer;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .faq__q::-webkit-details-marker {
    display: none;
  }
  .faq__q::marker {
    content: '';
  }

  .faq__q::after {
    content: '+';
    font-weight: 300;
    font-size: 1.25rem;
    color: var(--color-primary);
    line-height: 1;
    transition: transform 0.3s ease;
    flex-shrink: 0;
    margin-left: 1rem;
  }

  .faq[open] .faq__q::after {
    content: '\2212';
    transform: rotate(180deg);
  }

  .faq__a {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    line-height: 1.8;
    margin-top: 1rem;
    font-weight: 300;
  }

  /* -- CTA -- */
  .cta {
    padding: var(--section-padding) 2rem;
    text-align: center;
  }

  .cta__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--color-text);
    margin-top: 2.5rem;
    margin-bottom: 0.75rem;
  }

  .cta__text {
    color: var(--color-text-muted);
    font-size: 1rem;
    margin-bottom: 2rem;
    font-weight: 300;
  }

  .cta__phone {
    color: var(--color-primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .cta__phone:hover {
    color: var(--color-secondary);
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2.25rem;
    font-size: 0.8125rem;
    font-weight: 400;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    border-radius: var(--radius-sm);
    transition:
      background 0.3s ease,
      color 0.3s ease;
  }

  .btn--gold {
    background: var(--color-cta);
    color: var(--color-cta-text);
    border: 1px solid var(--color-primary);
  }

  .btn--gold:hover {
    background: transparent;
    color: var(--color-primary);
  }
</style>
