---
/**
 * NoirServices â€” Dark categorized service cards with gold accents,
 * thin borders, and elegant hover glow.
 */
import type { CollectionEntry } from 'astro:content'
import { siteConfig } from '@lib/site-config'

interface Props {
  services: CollectionEntry<'services'>[]
}

const { services } = Astro.props

const categories = ['residential', 'commercial', 'specialty'] as const
const categoryLabels: Record<string, string> = {
  residential: 'Residential',
  commercial: 'Commercial',
  specialty: 'Specialty',
}

const servicesByCategory = Object.fromEntries(
  categories.map((cat) => [cat, services.filter((s) => s.data.category === cat)])
) as Record<(typeof categories)[number], typeof services>
---

<main data-page="services">
  {/* -- Page header -- */}
  <section class="page-header">
    <div class="container">
      <p class="section-label">What We Offer</p>
      <h1 class="page-header__title">Our Services</h1>
      <p class="page-header__subtitle">
        Meticulous care for every space. From routine upkeep to bespoke deep cleans, our team
        delivers an uncompromising standard.
      </p>
    </div>
  </section>

  {/* -- Service categories -- */}
  {
    categories.map((category) => (
      <section class="section reveal" data-section={`services-${category}`}>
        <div class="container">
          <div class="cat-header">
            <span class="cat-header__label">{categoryLabels[category]}</span>
            <h2 class="cat-header__title">{categoryLabels[category]} Services</h2>
            <div class="gold-rule" />
          </div>
          <div class="service-grid reveal-stagger">
            {servicesByCategory[category].map((service) => (
              <article class="svc" id={service.data.slug} data-service={service.data.slug}>
                <div class="svc__top">
                  <h3 class="svc__name">{service.data.name}</h3>
                  <p class="svc__tagline">{service.data.tagline}</p>
                </div>
                <ul class="svc__features">
                  {service.data.features.slice(0, 4).map((feature) => (
                    <li class="svc__feature">
                      <span class="svc__check" aria-hidden="true">
                        &#10003;
                      </span>
                      {feature}
                    </li>
                  ))}
                </ul>
                <div class="svc__bottom">
                  {service.data.startingPrice && (
                    <span class="svc__price">
                      From ${service.data.startingPrice} {service.data.priceUnit}
                    </span>
                  )}
                  <a href="/contact" class="svc__cta">Get a Quote</a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    ))
  }

  {/* -- CTA -- */}
  <section class="cta reveal">
    <div class="container">
      <div class="gold-rule"></div>
      <h2 class="cta__title">Not Sure Which Service You Need?</h2>
      <p class="cta__text">
        Call us at <a href={`tel:${siteConfig.phone}`} class="cta__phone">{siteConfig.phone}</a> or
        request a complimentary consultation.
      </p>
      <a href="/contact" class="btn btn--gold">Request Consultation</a>
    </div>
  </section>
</main>

<style>
  /* -- Page header -- */
  .page-header {
    padding: var(--section-padding) 2rem 3rem;
    text-align: center;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(0.9375rem, 2vw, 1.125rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* -- Shared -- */
  .container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-label {
    display: block;
    font-family: var(--font-body);
    font-weight: 300;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    text-align: center;
  }

  /* -- Section -- */
  .section {
    padding: 3rem 2rem;
  }

  /* -- Category header -- */
  .cat-header {
    margin-bottom: 2.5rem;
  }

  .cat-header__label {
    display: block;
    font-family: var(--font-body);
    font-weight: 300;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
  }

  .cat-header__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.5rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  /* -- Service grid -- */
  .service-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  /* -- Service card -- */
  .svc {
    background: var(--color-surface);
    border: 1px solid #2a2a2a;
    border-radius: var(--radius-sm);
    padding: 2rem;
    display: flex;
    flex-direction: column;
    transition:
      border-color 0.4s ease,
      box-shadow 0.4s ease;
  }

  .svc:hover {
    border-color: var(--color-primary);
    box-shadow: 0 0 20px rgba(201, 169, 110, 0.08);
  }

  .svc__top {
    margin-bottom: 1.25rem;
  }

  .svc__name {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1.125rem;
    color: var(--color-text);
    margin-bottom: 0.375rem;
  }

  .svc__tagline {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    line-height: 1.6;
  }

  .svc__features {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem;
    flex: 1;
  }

  .svc__feature {
    padding: 0.35rem 0;
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    display: flex;
    align-items: baseline;
    gap: 0.625rem;
  }

  .svc__check {
    color: var(--color-primary);
    font-size: 0.75rem;
    flex-shrink: 0;
  }

  .svc__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.25rem;
    border-top: 1px solid #2a2a2a;
  }

  .svc__price {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: 1rem;
    color: var(--color-primary);
  }

  .svc__cta {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    border: 1px solid var(--color-primary);
    color: var(--color-primary);
    border-radius: var(--radius-sm);
    text-decoration: none;
    font-size: 0.75rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    transition:
      background 0.3s ease,
      color 0.3s ease;
  }

  .svc__cta:hover {
    background: var(--color-primary);
    color: var(--color-cta-text);
  }

  /* -- CTA -- */
  .cta {
    padding: var(--section-padding) 2rem;
    text-align: center;
  }

  .cta__title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--color-text);
    margin-top: 2.5rem;
    margin-bottom: 0.75rem;
  }

  .cta__text {
    color: var(--color-text-muted);
    font-size: 1rem;
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .cta__phone {
    color: var(--color-primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .cta__phone:hover {
    color: var(--color-secondary);
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2.25rem;
    font-size: 0.8125rem;
    font-weight: 400;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    border-radius: var(--radius-sm);
    transition:
      background 0.3s ease,
      color 0.3s ease;
  }

  .btn--gold {
    background: var(--color-cta);
    color: var(--color-cta-text);
    border: 1px solid var(--color-primary);
  }

  .btn--gold:hover {
    background: transparent;
    color: var(--color-primary);
  }

  @media (max-width: 640px) {
    .service-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
