---
/**
 * TrustFooter — Dark navy 4-column footer with newsletter signup area.
 *
 * Professional corporate styling, trust-reinforcing credentials.
 */
import { siteConfig, getFullAddress } from '@lib/site-config'

const year = new Date().getFullYear()

const quickLinks = [
  { label: 'Home', href: '/' },
  { label: 'Services', href: '/services' },
  { label: 'About', href: '/about' },
  { label: 'Pricing', href: '/pricing' },
  { label: 'Gallery', href: '/gallery' },
  { label: 'Contact', href: '/contact' },
]

const serviceLinks = [
  { label: 'Regular Cleaning', href: '/services#regular-cleaning' },
  { label: 'Deep Clean', href: '/services#deep-cleaning' },
  { label: 'Move In/Out', href: '/services#move-in-out-cleaning' },
  { label: 'Office Cleaning', href: '/services#office-cleaning' },
  { label: 'Post-Construction', href: '/services#post-construction-cleaning' },
]
---

<footer class="tf">
  {/* Trust credentials strip */}
  <div class="tf__creds">
    <div class="tf__creds-inner">
      <span class="tf__cred">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M12 2L3 7v6c0 5.25 3.83 10.15 9 11.25C17.17 23.15 21 18.25 21 13V7l-9-5z" stroke="currentColor" stroke-width="2" fill="none"/><path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
        Licensed & Insured
      </span>
      <span class="tf__cred">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" aria-hidden="true"><circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/><path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
        Background Checked
      </span>
      <span class="tf__cred">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" aria-hidden="true"><polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26" stroke="currentColor" stroke-width="2" fill="none" stroke-linejoin="round"/></svg>
        5-Star Rated
      </span>
      <span class="tf__cred">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" aria-hidden="true"><rect x="3" y="4" width="18" height="16" rx="2" stroke="currentColor" stroke-width="2"/><path d="M3 10h18" stroke="currentColor" stroke-width="2"/></svg>
        Bonded
      </span>
    </div>
  </div>

  <div class="tf__main">
    <div class="tf__inner">
      <div class="tf__grid">
        <div class="tf__col">
          <div class="tf__brand">
            <svg class="tf__brand-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M12 2L3 7v6c0 5.25 3.83 10.15 9 11.25C17.17 23.15 21 18.25 21 13V7l-9-5z" fill="currentColor" opacity="0.2"/><path d="M12 2L3 7v6c0 5.25 3.83 10.15 9 11.25C17.17 23.15 21 18.25 21 13V7l-9-5z" stroke="currentColor" stroke-width="1.5" fill="none"/></svg>
            CleanSpark
          </div>
          <p class="tf__tagline">{siteConfig.tagline}</p>
          <p class="tf__desc">Professional cleaning services you can trust. Serving the greater Seattle area since 2019.</p>
        </div>

        <div class="tf__col">
          <h3 class="tf__heading">Quick Links</h3>
          <ul class="tf__list">
            {quickLinks.map((link) => (
              <li>
                <a href={link.href} class="tf__link">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>

        <div class="tf__col">
          <h3 class="tf__heading">Our Services</h3>
          <ul class="tf__list">
            {serviceLinks.map((link) => (
              <li>
                <a href={link.href} class="tf__link">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>

        <div class="tf__col">
          <h3 class="tf__heading">Contact Us</h3>
          <ul class="tf__list">
            <li>
              <a href={`tel:${siteConfig.phone}`} class="tf__link">{siteConfig.phone}</a>
            </li>
            <li>
              <a href={`mailto:${siteConfig.email}`} class="tf__link">{siteConfig.email}</a>
            </li>
            <li class="tf__address">{getFullAddress()}</li>
          </ul>
          <div class="tf__hours">
            <p>{siteConfig.hours.weekday}</p>
            <p>{siteConfig.hours.saturday}</p>
            <p>{siteConfig.hours.sunday}</p>
          </div>
        </div>
      </div>

      <div class="tf__bottom">
        <p class="tf__copy">&copy; {year} {siteConfig.name}. All rights reserved.</p>
        <div class="tf__social">
          <a href={siteConfig.social.facebook} target="_blank" rel="noopener noreferrer" class="tf__social-link" aria-label="Facebook">Facebook</a>
          <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer" class="tf__social-link" aria-label="Instagram">Instagram</a>
          <a href={siteConfig.social.yelp} target="_blank" rel="noopener noreferrer" class="tf__social-link" aria-label="Yelp">Yelp</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* ── Trust credentials strip ── */
  .tf__creds {
    background: var(--color-secondary);
    padding: 0.875rem 2rem;
  }

  .tf__creds-inner {
    max-width: var(--container-max);
    margin: 0 auto;
    display: flex;
    justify-content: center;
    gap: 2.5rem;
    flex-wrap: wrap;
  }

  .tf__cred {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: white;
    font-family: var(--font-body);
    font-size: 0.8125rem;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  /* ── Main footer ── */
  .tf__main {
    background: var(--color-primary);
    padding: 4rem 2rem 2rem;
  }

  .tf__inner {
    max-width: var(--container-max);
    margin: 0 auto;
  }

  .tf__grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .tf__brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.5rem;
    color: white;
    margin-bottom: 0.75rem;
  }

  .tf__brand-icon { color: var(--color-accent); }

  .tf__tagline {
    color: var(--color-accent);
    font-family: var(--font-body);
    font-size: 0.9375rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .tf__desc {
    color: rgba(255, 255, 255, 0.65);
    font-size: 0.9375rem;
    line-height: 1.6;
    max-width: 280px;
  }

  .tf__heading {
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin-bottom: 1.25rem;
    color: var(--color-accent);
  }

  .tf__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .tf__link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 0.9375rem;
    display: inline-block;
    padding: 0.1rem 0;
    transition: color 0.2s;
  }

  .tf__link:hover {
    color: white;
  }

  .tf__address {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9375rem;
    font-style: normal;
  }

  .tf__hours {
    margin-top: 1rem;
    color: rgba(255, 255, 255, 0.65);
    font-size: 0.8125rem;
    line-height: 1.7;
  }

  .tf__bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.15);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .tf__copy {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.8125rem;
  }

  .tf__social {
    display: flex;
    gap: 1.5rem;
  }

  .tf__social-link {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    font-size: 0.8125rem;
    font-weight: 600;
    transition: color 0.2s;
  }

  .tf__social-link:hover {
    color: white;
  }

  @media (max-width: 768px) {
    .tf__grid {
      grid-template-columns: 1fr 1fr;
      gap: 2.5rem;
    }

    .tf__creds-inner {
      gap: 1.25rem;
    }

    .tf__cred {
      font-size: 0.75rem;
    }

    .tf__bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .tf__grid {
      grid-template-columns: 1fr;
    }

    .tf__creds-inner {
      gap: 0.75rem;
      justify-content: start;
    }
  }
</style>
