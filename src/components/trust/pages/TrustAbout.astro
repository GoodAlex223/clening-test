---
/**
 * TrustAbout — Company story, values, team with corporate styling.
 */
import type { CollectionEntry } from 'astro:content'
import { siteConfig } from '@lib/site-config'

interface Props {
  team: CollectionEntry<'team'>[]
}

const { team } = Astro.props

const values = [
  {
    title: 'Quality First',
    desc: 'We never cut corners. Every surface, every room, every time.',
    icon: 'shield',
  },
  {
    title: 'Fair & Transparent',
    desc: 'No hidden fees. Fair wages for our team. Honest pricing for our clients.',
    icon: 'check',
  },
  {
    title: 'Eco-Conscious',
    desc: 'Green cleaning products and sustainable practices as standard.',
    icon: 'leaf',
  },
  {
    title: 'Reliable',
    desc: 'On time, every time. Consistent results you can count on.',
    icon: 'clock',
  },
]
---

<main data-page="about">
  {/* ── Page header ── */}
  <section class="page-header">
    <div class="container">
      <h1 class="page-header__title">About CleanSpark</h1>
      <p class="page-header__subtitle">Seattle's trusted cleaning professionals since 2019.</p>
    </div>
  </section>

  {/* ── Story ── */}
  <section class="section reveal">
    <div class="container">
      <div class="story">
        <div class="story__content">
          <h2 class="story__heading">Our Story</h2>
          <p class="story__text">
            CleanSpark was born from a simple belief: everyone deserves a clean, healthy space — and
            every cleaner deserves fair pay and respect. Founded in 2019, we started as a one-person
            operation in a Seattle studio apartment with a vacuum, a bucket, and a vision.
          </p>
          <p class="story__text">
            Today, we're a team of dedicated professionals serving homes and businesses across the
            greater Seattle area. We've completed over 5,000 cleans, maintained a 4.9-star rating,
            and built something we're truly proud of.
          </p>
          <div class="story__stats">
            <div class="story__stat">
              <strong>5,000+</strong>
              <span>Cleans Completed</span>
            </div>
            <div class="story__stat">
              <strong>4.9/5</strong>
              <span>Average Rating</span>
            </div>
            <div class="story__stat">
              <strong>6+</strong>
              <span>Years in Business</span>
            </div>
          </div>
        </div>
        <div class="story__aside">
          <div class="story__card">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" aria-hidden="true"
              ><path
                d="M12 2L3 7v6c0 5.25 3.83 10.15 9 11.25C17.17 23.15 21 18.25 21 13V7l-9-5z"
                stroke="var(--color-primary)"
                stroke-width="1.5"
                fill="color-mix(in srgb, var(--color-primary) 8%, transparent)"></path><path
                d="M9 12l2 2 4-4"
                stroke="var(--color-primary)"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></path></svg
            >
            <h3>Our Promise</h3>
            <p>
              100% satisfaction guaranteed. If you're not completely happy with our work, we'll
              re-clean it free of charge within 24 hours.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* ── Values ── */}
  <section class="section section--surface">
    <div class="container">
      <div class="values-header reveal">
        <h2 class="values-header__title">What Drives Us</h2>
        <p class="values-header__subtitle">The principles that guide everything we do.</p>
      </div>
      <div class="values-grid reveal-stagger reveal">
        {
          values.map((v) => (
            <article class="value-card">
              <div class="value-card__icon" aria-hidden="true">
                {v.icon === 'shield' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path
                      d="M12 2L3 7v6c0 5.25 3.83 10.15 9 11.25C17.17 23.15 21 18.25 21 13V7l-9-5z"
                      stroke="currentColor"
                      stroke-width="2"
                      fill="none"
                    />
                    <path
                      d="M9 12l2 2 4-4"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                )}
                {v.icon === 'check' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" />
                    <path
                      d="M9 12l2 2 4-4"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                )}
                {v.icon === 'leaf' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path
                      d="M17 8C8 10 5.9 16.17 3.82 21.34L5.71 22l1.41-3.53A9.62 9.62 0 0012 20c4.42 0 8-3.58 8-8V4l-3 4z"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linejoin="round"
                    />
                  </svg>
                )}
                {v.icon === 'clock' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" />
                    <path
                      d="M12 6v6l4 2"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                )}
              </div>
              <h3 class="value-card__title">{v.title}</h3>
              <p class="value-card__desc">{v.desc}</p>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  {/* ── Team ── */}
  <section class="section">
    <div class="container">
      <div class="team-header reveal">
        <h2 class="team-header__title">Meet Our Team</h2>
        <p class="team-header__subtitle">The people behind every sparkling clean.</p>
      </div>
      <div class="team-grid reveal-stagger reveal">
        {
          team.map((member) => (
            <article class="member" data-member={member.data.id}>
              <div class="member__avatar" aria-hidden="true">
                {member.data.name.charAt(0)}
              </div>
              <h3 class="member__name">{member.data.name}</h3>
              <p class="member__role">{member.data.role}</p>
              <p class="member__bio">
                {member.data.bio.length > 200
                  ? member.data.bio.slice(0, 200) + '...'
                  : member.data.bio}
              </p>
              {member.data.certifications && member.data.certifications.length > 0 && (
                <div class="member__certs">
                  {member.data.certifications.map((cert) => (
                    <span class="member__cert">
                      <svg
                        width="10"
                        height="10"
                        viewBox="0 0 24 24"
                        fill="none"
                        aria-hidden="true"
                      >
                        <path
                          d="M9 12l2 2 4-4"
                          stroke="currentColor"
                          stroke-width="3"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        />
                      </svg>
                      {cert}
                    </span>
                  ))}
                </div>
              )}
            </article>
          ))
        }
      </div>
    </div>
  </section>

  {/* ── Service Areas ── */}
  <section class="areas reveal">
    <div class="container">
      <h2 class="areas__title">Proudly Serving the Greater Seattle Area</h2>
      <p class="areas__list">{siteConfig.serviceAreas.join(' \u00B7 ')}</p>
    </div>
  </section>
</main>

<style>
  /* ── Page header ── */
  .page-header {
    padding: var(--section-padding) 2rem 3rem;
    text-align: center;
    background: var(--color-surface);
    border-bottom: 1px solid #dee2e6;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(2rem, 4vw, 2.75rem);
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(1rem, 1.5vw, 1.125rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ── Shared ── */
  .container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 2rem;
  }
  .section {
    padding: var(--section-padding) 0;
  }
  .section--surface {
    background: var(--color-surface);
  }

  /* ── Story ── */
  .story {
    display: grid;
    grid-template-columns: 1.3fr 0.7fr;
    gap: 3rem;
    align-items: start;
  }

  .story__heading {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(1.5rem, 2.5vw, 2rem);
    color: var(--color-primary);
    margin-bottom: 1.25rem;
  }

  .story__text {
    color: var(--color-text);
    line-height: 1.7;
    font-size: 1.0625rem;
    margin-bottom: 1rem;
  }

  .story__stats {
    display: flex;
    gap: 2.5rem;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid #dee2e6;
  }

  .story__stat {
    display: flex;
    flex-direction: column;
  }

  .story__stat strong {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.5rem;
    color: var(--color-primary);
  }

  .story__stat span {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    font-weight: 600;
  }

  .story__card {
    background: var(--color-surface);
    border: 1px solid #dee2e6;
    border-radius: var(--radius-md);
    padding: 2rem;
    border-left: 4px solid var(--color-secondary);
  }

  .story__card svg {
    margin-bottom: 1rem;
  }

  .story__card h3 {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.125rem;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .story__card p {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  /* ── Values ── */
  .values-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .values-header__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(1.5rem, 2.5vw, 2rem);
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .values-header__subtitle {
    color: var(--color-text-muted);
    font-size: 1rem;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
  }

  .value-card {
    background: var(--color-background);
    border: 1px solid #dee2e6;
    border-radius: var(--radius-md);
    padding: 2rem;
    text-align: center;
    transition:
      transform 0.2s,
      box-shadow 0.2s;
  }

  .value-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
  }

  .value-card__icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: color-mix(in srgb, var(--color-primary) 8%, transparent);
    color: var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
  }

  .value-card__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.125rem;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .value-card__desc {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  /* ── Team ── */
  .team-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .team-header__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(1.5rem, 2.5vw, 2rem);
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .team-header__subtitle {
    color: var(--color-text-muted);
    font-size: 1rem;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 1.5rem;
  }

  .member {
    background: var(--color-surface);
    border: 1px solid #dee2e6;
    border-radius: var(--radius-md);
    padding: 2rem;
    text-align: center;
    transition:
      border-color 0.2s,
      transform 0.2s;
  }

  .member:hover {
    border-color: var(--color-secondary);
    transform: translateY(-3px);
  }

  .member__avatar {
    width: 4.5rem;
    height: 4.5rem;
    border-radius: 50%;
    background: var(--color-primary);
    color: white;
    margin: 0 auto 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 700;
  }

  .member__name {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.125rem;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .member__role {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .member__bio {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  .member__certs {
    margin-top: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    justify-content: center;
  }

  .member__cert {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    padding: 0.2rem 0.625rem;
    background: color-mix(in srgb, var(--color-primary) 8%, transparent);
    border-radius: var(--radius-full);
    color: var(--color-primary);
    font-weight: 600;
  }

  /* ── Areas ── */
  .areas {
    padding: 4rem 0;
    background: var(--color-primary);
    text-align: center;
  }

  .areas__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.75rem;
    color: white;
    margin-bottom: 1rem;
  }

  .areas__list {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.0625rem;
    line-height: 2;
  }

  @media (max-width: 768px) {
    .story {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .story__stats {
      gap: 1.5rem;
    }
  }
</style>
