---
/**
 * TrustContact — Contact form + info cards with professional corporate styling.
 */
import type { CollectionEntry } from 'astro:content'
import { siteConfig, getFullAddress } from '@lib/site-config'

interface Props {
  services: CollectionEntry<'services'>[]
}

const { services } = Astro.props
---

<main data-page="contact">
  {/* ── Page header ── */}
  <section class="page-header">
    <div class="container">
      <h1 class="page-header__title">Get in Touch</h1>
      <p class="page-header__subtitle">Ready for professional, reliable cleaning? Request a free estimate today.</p>
    </div>
  </section>

  {/* ── Contact content ── */}
  <section class="contact reveal">
    <div class="container">
      <div class="contact__grid">

        {/* ── Form ── */}
        <div class="contact__form-wrap">
          <h2 class="contact__heading">Request a Free Estimate</h2>
          <p class="contact__subheading">Fill out the form below and we'll get back to you within 2 business hours.</p>
          <form id="contact-form" class="form">
            <div class="form__row">
              <label class="field">
                <span class="field__label">Full Name *</span>
                <input type="text" name="name" required autocomplete="name" class="field__input" />
              </label>
              <label class="field">
                <span class="field__label">Email *</span>
                <input type="email" name="email" required autocomplete="email" class="field__input" />
              </label>
            </div>
            <div class="form__row">
              <label class="field">
                <span class="field__label">Phone</span>
                <input type="tel" name="phone" autocomplete="tel" class="field__input" />
              </label>
              <label class="field">
                <span class="field__label">Service Interest</span>
                <select name="service" class="field__input">
                  <option value="">Select a service (optional)</option>
                  {services.map((s) => (
                    <option value={s.data.slug}>{s.data.name}</option>
                  ))}
                </select>
              </label>
            </div>
            <label class="field">
              <span class="field__label">Message *</span>
              <textarea name="message" required rows={5} class="field__input field__input--textarea"></textarea>
            </label>
            <button type="submit" class="btn btn--primary btn--full">Submit Request</button>
          </form>
        </div>

        {/* ── Info sidebar ── */}
        <aside class="info-side">
          <h2 class="contact__heading">Contact Information</h2>

          <article class="info-card">
            <div class="info-card__icon">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72c.127.96.361 1.903.7 2.81a2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0122 16.92z" stroke="currentColor" stroke-width="2"/></svg>
            </div>
            <div>
              <h3 class="info-card__title">Call Us</h3>
              <a href={`tel:${siteConfig.phone}`} class="info-card__link">{siteConfig.phone}</a>
            </div>
          </article>

          <article class="info-card">
            <div class="info-card__icon">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true"><rect x="2" y="4" width="20" height="16" rx="2" stroke="currentColor" stroke-width="2"/><path d="M22 7l-10 7L2 7" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/></svg>
            </div>
            <div>
              <h3 class="info-card__title">Email Us</h3>
              <a href={`mailto:${siteConfig.email}`} class="info-card__link">{siteConfig.email}</a>
            </div>
          </article>

          <article class="info-card">
            <div class="info-card__icon">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z" stroke="currentColor" stroke-width="2"/><circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2"/></svg>
            </div>
            <div>
              <h3 class="info-card__title">Visit Us</h3>
              <address class="info-card__text">{getFullAddress()}</address>
            </div>
          </article>

          <article class="info-card">
            <div class="info-card__icon">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true"><circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/><path d="M12 6v6l4 2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </div>
            <div>
              <h3 class="info-card__title">Business Hours</h3>
              <ul class="info-card__hours">
                <li>{siteConfig.hours.weekday}</li>
                <li>{siteConfig.hours.saturday}</li>
                <li>{siteConfig.hours.sunday}</li>
              </ul>
            </div>
          </article>

          <article class="info-card">
            <div class="info-card__icon">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/></svg>
            </div>
            <div>
              <h3 class="info-card__title">Follow Us</h3>
              <div class="info-card__social">
                <a href={siteConfig.social.facebook} target="_blank" rel="noopener noreferrer">Facebook</a>
                <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer">Instagram</a>
                <a href={siteConfig.social.yelp} target="_blank" rel="noopener noreferrer">Yelp</a>
              </div>
            </div>
          </article>
        </aside>
      </div>
    </div>
  </section>

  {/* ── Service areas ── */}
  <section class="areas reveal">
    <div class="container">
      <h2 class="areas__title">We Serve</h2>
      <p class="areas__list">{siteConfig.serviceAreas.join(' \u00B7 ')}</p>
    </div>
  </section>
</main>

<script>
  function initTrustContactForm(): void {
    const form = document.getElementById('contact-form') as HTMLFormElement | null
    if (!form) return

    form.addEventListener('submit', (e) => {
      e.preventDefault()
      if (!form.checkValidity()) {
        form.reportValidity()
        return
      }
      const btn = form.querySelector('button[type="submit"]') as HTMLButtonElement
      const originalText = btn.textContent
      btn.textContent = 'Request Submitted \u2713'
      btn.disabled = true
      btn.style.opacity = '0.7'
      form.reset()
      setTimeout(() => {
        btn.textContent = originalText
        btn.disabled = false
        btn.style.opacity = ''
      }, 3000)
    })
  }

  initTrustContactForm()
</script>

<style>
  /* ── Page header ── */
  .page-header {
    padding: var(--section-padding) 2rem 3rem;
    text-align: center;
    background: var(--color-surface);
    border-bottom: 1px solid #DEE2E6;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(2rem, 4vw, 2.75rem);
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(1rem, 1.5vw, 1.125rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .container { max-width: var(--container-max); margin: 0 auto; padding: 0 2rem; }

  /* ── Contact layout ── */
  .contact { padding: var(--section-padding) 0; }

  .contact__grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 3rem;
    align-items: start;
  }

  .contact__heading {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.375rem;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .contact__subheading {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    margin-bottom: 1.5rem;
    line-height: 1.5;
  }

  /* ── Form ── */
  .form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .form__row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.25rem;
  }

  .field {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .field__label {
    font-family: var(--font-body);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .field__input {
    padding: 0.7rem 1rem;
    border: 1px solid #DEE2E6;
    border-radius: var(--radius-sm);
    font-size: 1rem;
    font-family: var(--font-body);
    background: var(--color-surface);
    color: var(--color-text);
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .field__input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-primary) 12%, transparent);
  }

  .field__input--textarea {
    resize: vertical;
    min-height: 120px;
  }

  /* ── Buttons ── */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 0.9375rem;
    padding: 0.8rem 1.75rem;
    border-radius: var(--radius-md);
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .btn--primary {
    background: var(--color-cta);
    color: var(--color-cta-text);
    box-shadow: 0 2px 8px rgba(27, 73, 101, 0.2);
  }

  .btn--primary:hover {
    background: var(--color-secondary);
    box-shadow: 0 4px 16px rgba(27, 73, 101, 0.25);
  }

  .btn--full { width: 100%; }

  /* ── Info sidebar ── */
  .info-side {
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
  }

  .info-card {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    background: var(--color-surface);
    border: 1px solid #DEE2E6;
    border-radius: var(--radius-md);
    padding: 1.25rem;
    transition: border-color 0.2s;
  }

  .info-card:hover {
    border-color: var(--color-secondary);
  }

  .info-card__icon {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: color-mix(in srgb, var(--color-primary) 8%, transparent);
    color: var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .info-card__title {
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    margin-bottom: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .info-card__link {
    color: var(--color-text);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 600;
    transition: color 0.2s;
  }

  .info-card__link:hover { color: var(--color-primary); }

  .info-card__text {
    font-style: normal;
    color: var(--color-text);
    font-size: 0.9375rem;
    line-height: 1.5;
  }

  .info-card__hours {
    list-style: none;
    padding: 0;
    margin: 0;
    color: var(--color-text);
    font-size: 0.875rem;
    line-height: 1.7;
  }

  .info-card__social {
    display: flex;
    gap: 1rem;
  }

  .info-card__social a {
    color: var(--color-text-muted);
    text-decoration: none;
    font-family: var(--font-body);
    font-size: 0.9375rem;
    font-weight: 600;
    transition: opacity 0.2s;
  }

  .info-card__social a:hover { opacity: 0.7; }

  /* ── Service areas ── */
  .areas {
    padding: 4rem 0;
    text-align: center;
    background: var(--color-primary);
  }

  .areas__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.75rem;
    color: white;
    margin-bottom: 1rem;
  }

  .areas__list {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.0625rem;
    line-height: 2;
  }

  @media (max-width: 768px) {
    .contact__grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .form__row {
      grid-template-columns: 1fr;
    }
  }
</style>
