---
/**
 * TrustGallery — Filterable before/after photo grid with corporate styling.
 */
import type { CollectionEntry } from 'astro:content'

interface Props {
  gallery: CollectionEntry<'gallery'>[]
  uniqueServices: string[]
}

const { gallery, uniqueServices } = Astro.props
---

<main data-page="gallery">
  {/* ── Page header ── */}
  <section class="page-header">
    <div class="container">
      <h1 class="page-header__title">Our Work</h1>
      <p class="page-header__subtitle">See the CleanSpark difference. Real projects, documented results.</p>
    </div>
  </section>

  {/* ── Filters ── */}
  <section class="filters">
    <div class="container">
      <div class="filter-bar">
        <button data-filter="all" class="filter filter--active" type="button" aria-pressed="true">All Projects</button>
        {uniqueServices.map((service) => (
          <button data-filter={service} class="filter" type="button" aria-pressed="false">{service}</button>
        ))}
      </div>
    </div>
  </section>

  {/* ── Gallery grid ── */}
  <section class="gallery-section reveal">
    <div class="container">
      <div class="gallery-grid reveal-stagger">
        {gallery.map((item, i) => (
          <article class="gal" data-gallery-item data-service={item.data.service}>
            <div class="gal__images">
              <div class="gal__img-wrap">
                <img
                  src={item.data.before}
                  alt={`Before: ${item.data.room} - ${item.data.service}`}
                  loading={i < 4 ? 'eager' : 'lazy'}
                  class="gal__img"
                />
                <span class="gal__label">Before</span>
              </div>
              <div class="gal__img-wrap">
                <img
                  src={item.data.after}
                  alt={`After: ${item.data.room} - ${item.data.service}`}
                  loading={i < 4 ? 'eager' : 'lazy'}
                  class="gal__img"
                />
                <span class="gal__label gal__label--after">After</span>
              </div>
            </div>
            <div class="gal__info">
              <div class="gal__meta">
                <span class="gal__room">{item.data.room}</span>
                <span class="gal__service">{item.data.service}</span>
              </div>
              <p class="gal__desc">{item.data.description}</p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  {/* ── CTA ── */}
  <section class="cta reveal">
    <div class="container">
      <h2 class="cta__title">Want Results Like These?</h2>
      <p class="cta__text">Every space has potential. Let our team show you yours.</p>
      <a href="/contact" class="btn btn--white">Request Free Estimate</a>
    </div>
  </section>
</main>

<script>
  function initTrustGalleryFilter(): void {
    const buttons = document.querySelectorAll<HTMLButtonElement>('[data-filter]')
    const items = document.querySelectorAll<HTMLElement>('[data-gallery-item]')

    buttons.forEach((btn) => {
      btn.addEventListener('click', () => {
        const filter = btn.dataset.filter

        buttons.forEach((b) => {
          const isActive = b === btn
          b.classList.toggle('filter--active', isActive)
          b.setAttribute('aria-pressed', String(isActive))
        })

        items.forEach((item) => {
          const matches = filter === 'all' || item.dataset.service === filter
          item.style.display = matches ? '' : 'none'
        })
      })
    })
  }

  initTrustGalleryFilter()
</script>

<style>
  /* ── Page header ── */
  .page-header {
    padding: var(--section-padding) 2rem 3rem;
    text-align: center;
    background: var(--color-surface);
    border-bottom: 1px solid #DEE2E6;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(2rem, 4vw, 2.75rem);
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(1rem, 1.5vw, 1.125rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .container { max-width: var(--container-max); margin: 0 auto; padding: 0 2rem; }

  /* ── Filters ── */
  .filters { padding: 2rem 0; }

  .filter-bar {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
  }

  .filter {
    padding: 0.5rem 1.25rem;
    border: 1px solid #DEE2E6;
    border-radius: var(--radius-md);
    background: var(--color-surface);
    color: var(--color-text);
    cursor: pointer;
    font-family: var(--font-body);
    font-size: 0.875rem;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .filter:hover {
    border-color: var(--color-secondary);
    color: var(--color-primary);
  }

  .filter--active {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }

  /* ── Gallery grid ── */
  .gallery-section { padding: 0 0 var(--section-padding); }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
    gap: 1.5rem;
  }

  .gal {
    background: var(--color-surface);
    border: 1px solid #DEE2E6;
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .gal:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  }

  .gal__images {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .gal__img-wrap {
    position: relative;
    overflow: hidden;
  }

  .gal__img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    display: block;
  }

  .gal__label {
    position: absolute;
    top: 0.5rem;
    left: 0.5rem;
    background: var(--color-text);
    color: white;
    font-family: var(--font-body);
    font-size: 0.6875rem;
    font-weight: 600;
    padding: 0.2rem 0.625rem;
    border-radius: var(--radius-sm);
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  .gal__label--after {
    background: #28A745;
  }

  .gal__info { padding: 1.25rem; }

  .gal__meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .gal__room {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1rem;
    color: var(--color-text);
  }

  .gal__service {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.2rem 0.625rem;
    background: color-mix(in srgb, var(--color-primary) 8%, transparent);
    border-radius: var(--radius-sm);
    color: var(--color-primary);
  }

  .gal__desc {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    line-height: 1.5;
  }

  /* ── CTA ── */
  .cta {
    background: var(--color-primary);
    padding: 4rem 0;
    text-align: center;
  }

  .cta__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    color: white;
    margin-bottom: 0.75rem;
  }

  .cta__text {
    color: rgba(255, 255, 255, 0.85);
    font-size: 1.0625rem;
    margin-bottom: 2rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 0.9375rem;
    padding: 0.8rem 1.75rem;
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .btn--white {
    background: white;
    color: var(--color-primary);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .btn--white:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }

  @media (max-width: 640px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
