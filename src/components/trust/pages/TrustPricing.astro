---
/**
 * TrustPricing — Professional pricing tiers with feature checklists,
 * FAQ accordion, and corporate CTA.
 */
import type { CollectionEntry } from 'astro:content'
import { siteConfig } from '@lib/site-config'

interface Props {
  pricing: CollectionEntry<'pricing'>[]
}

const { pricing } = Astro.props

const faqs = [
  { q: 'Do I need to be home during the cleaning?', a: 'Not at all. Many clients give us a key or access code. All our team members are background-checked, insured, and bonded for your peace of mind.' },
  { q: "What if I'm not satisfied with the cleaning?", a: "We have a 100% satisfaction guarantee. If anything isn't up to your standards, we'll re-clean it free of charge within 24 hours." },
  { q: 'Do you bring your own supplies and equipment?', a: "Yes! We bring all eco-friendly cleaning products and professional-grade equipment. You don't need to supply anything." },
  { q: 'Can I customize my cleaning plan?', a: "Absolutely. While our tiers give you a starting point, we're happy to add or adjust services to match your specific needs. Just let us know when you book." },
  { q: 'How do I pay?', a: 'We accept all major credit cards and send invoices via email after each visit. No cash needed, no upfront payments.' },
]
---

<main data-page="pricing">
  {/* ── Page header ── */}
  <section class="page-header">
    <div class="container">
      <h1 class="page-header__title">Transparent Pricing</h1>
      <p class="page-header__subtitle">No hidden fees. No surprises. Clear, competitive rates for professional cleaning.</p>
    </div>
  </section>

  {/* ── Pricing tiers ── */}
  <section class="tiers-section reveal">
    <div class="container">
      <div class="tiers reveal-stagger">
        {pricing.map((tier) => (
          <article
            class:list={['tier', { 'tier--highlighted': tier.data.highlighted }]}
            data-tier={tier.data.id}
          >
            {tier.data.highlighted && (
              <span class="tier__badge">Recommended</span>
            )}
            <h2 class="tier__name">{tier.data.name}</h2>
            <p class="tier__tagline">{tier.data.tagline}</p>
            <div class="tier__price-block">
              <span class="tier__price">${tier.data.price}</span>
              <span class="tier__unit">{tier.data.priceUnit}</span>
            </div>
            {tier.data.frequency && (
              <p class="tier__freq">{tier.data.frequency}</p>
            )}
            <ul class="tier__features">
              {tier.data.features.map((f) => (
                <li class:list={['tier__feature', { 'tier__feature--excluded': !f.included }]}>
                  {f.included ? (
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" class="tier__feature-icon" aria-hidden="true"><circle cx="12" cy="12" r="10" stroke="#28A745" stroke-width="2"/><path d="M9 12l2 2 4-4" stroke="#28A745" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                  ) : (
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" class="tier__feature-icon" aria-hidden="true"><circle cx="12" cy="12" r="10" stroke="#DEE2E6" stroke-width="2"/><path d="M15 9l-6 6M9 9l6 6" stroke="#DEE2E6" stroke-width="2" stroke-linecap="round"/></svg>
                  )}
                  {f.text}
                </li>
              ))}
            </ul>
            <a
              href={tier.data.ctaUrl}
              class:list={['tier__cta', { 'tier__cta--filled': tier.data.highlighted }]}
            >
              {tier.data.ctaText}
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

  {/* ── Guarantee ── */}
  <section class="guarantee reveal">
    <div class="container">
      <div class="guarantee__inner">
        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" class="guarantee__icon" aria-hidden="true">
          <path d="M12 2L3 7v6c0 5.25 3.83 10.15 9 11.25C17.17 23.15 21 18.25 21 13V7l-9-5z" stroke="currentColor" stroke-width="1.5" fill="color-mix(in srgb, currentColor 10%, transparent)"/>
          <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <div>
          <h3 class="guarantee__title">100% Satisfaction Guarantee</h3>
          <p class="guarantee__text">Not happy with our work? We'll re-clean it free within 24 hours. No questions asked.</p>
        </div>
      </div>
    </div>
  </section>

  {/* ── FAQ ── */}
  <section class="faq-section reveal">
    <div class="container container--narrow">
      <h2 class="faq-header__title">Frequently Asked Questions</h2>
      <div class="faq-list">
        {faqs.map((faq) => (
          <details class="faq">
            <summary class="faq__q">{faq.q}</summary>
            <p class="faq__a">{faq.a}</p>
          </details>
        ))}
      </div>
    </div>
  </section>

  {/* ── CTA ── */}
  <section class="cta reveal">
    <div class="container">
      <h2 class="cta__title">Ready to Get Started?</h2>
      <p class="cta__text">
        Book online or call us at <a href={`tel:${siteConfig.phone}`} class="cta__phone">{siteConfig.phone}</a>.
      </p>
      <a href="/contact" class="btn btn--white">Request Free Estimate</a>
    </div>
  </section>
</main>

<style>
  /* ── Page header ── */
  .page-header {
    padding: var(--section-padding) 2rem 3rem;
    text-align: center;
    background: var(--color-surface);
    border-bottom: 1px solid #DEE2E6;
  }

  .page-header__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(2rem, 4vw, 2.75rem);
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .page-header__subtitle {
    color: var(--color-text-muted);
    font-size: clamp(1rem, 1.5vw, 1.125rem);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* ── Shared ── */
  .container { max-width: var(--container-max); margin: 0 auto; padding: 0 2rem; }
  .container--narrow { max-width: 720px; }

  /* ── Tiers ── */
  .tiers-section { padding: var(--section-padding) 0; }

  .tiers {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    align-items: start;
  }

  .tier {
    background: var(--color-surface);
    border: 1px solid #DEE2E6;
    border-radius: var(--radius-md);
    padding: 2.5rem 2rem;
    text-align: center;
    position: relative;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .tier:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
  }

  .tier--highlighted {
    border-color: var(--color-primary);
    border-width: 2px;
    box-shadow: 0 4px 20px rgba(27, 73, 101, 0.12);
  }

  .tier--highlighted:hover {
    box-shadow: 0 8px 28px rgba(27, 73, 101, 0.16);
    transform: translateY(-4px);
  }

  .tier__badge {
    position: absolute;
    top: -0.75rem;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-primary);
    color: white;
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 1rem;
    border-radius: var(--radius-full);
    letter-spacing: 0.04em;
  }

  .tier__name {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.375rem;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .tier__tagline {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    margin-bottom: 1.5rem;
  }

  .tier__price-block { margin-bottom: 0.25rem; }

  .tier__price {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 2.75rem;
    color: var(--color-primary);
  }

  .tier__unit {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .tier__freq {
    color: var(--color-text-muted);
    font-size: 0.8125rem;
    margin-bottom: 1.5rem;
  }

  .tier__features {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem;
    text-align: left;
  }

  .tier__feature {
    padding: 0.4rem 0;
    font-size: 0.9375rem;
    color: var(--color-text);
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }

  .tier__feature-icon {
    flex-shrink: 0;
    position: relative;
    top: 2px;
  }

  .tier__feature--excluded {
    color: var(--color-text-muted);
    text-decoration: line-through;
    opacity: 0.5;
  }

  .tier__cta {
    display: block;
    width: 100%;
    padding: 0.8rem;
    text-align: center;
    text-decoration: none;
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 0.9375rem;
    border-radius: var(--radius-md);
    border: 2px solid var(--color-primary);
    color: var(--color-primary);
    background: transparent;
    transition: all 0.2s ease;
    box-sizing: border-box;
  }

  .tier__cta:hover {
    background: var(--color-primary);
    color: white;
  }

  .tier__cta--filled {
    background: var(--color-cta);
    color: white;
    border-color: var(--color-cta);
  }

  .tier__cta--filled:hover {
    background: var(--color-secondary);
    border-color: var(--color-secondary);
    box-shadow: 0 2px 8px rgba(27, 73, 101, 0.2);
  }

  /* ── Guarantee ── */
  .guarantee {
    padding: 2rem 0;
  }

  .guarantee__inner {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    background: color-mix(in srgb, var(--color-secondary) 8%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-secondary) 20%, transparent);
    border-radius: var(--radius-lg);
    padding: 2rem;
    max-width: 640px;
    margin: 0 auto;
  }

  .guarantee__icon {
    color: var(--color-secondary);
    flex-shrink: 0;
  }

  .guarantee__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.125rem;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .guarantee__text {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    line-height: 1.5;
  }

  /* ── FAQ ── */
  .faq-section {
    padding: var(--section-padding) 0;
    background: var(--color-surface);
  }

  .faq-header__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(1.5rem, 2.5vw, 2rem);
    color: var(--color-primary);
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .faq-list {
    display: flex;
    flex-direction: column;
  }

  .faq {
    border-bottom: 1px solid #DEE2E6;
    padding: 1.25rem 0;
  }

  .faq__q {
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 1rem;
    color: var(--color-text);
    cursor: pointer;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .faq__q::-webkit-details-marker { display: none; }
  .faq__q::marker { content: ''; }

  .faq__q::after {
    content: '+';
    font-weight: 600;
    font-size: 1.25rem;
    color: var(--color-primary);
    line-height: 1;
    transition: transform 0.3s ease;
    flex-shrink: 0;
    margin-left: 1rem;
  }

  .faq[open] .faq__q::after {
    content: '\2212';
  }

  .faq__a {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    line-height: 1.7;
    margin-top: 0.75rem;
  }

  /* ── CTA ── */
  .cta {
    background: var(--color-primary);
    padding: 4rem 0;
    text-align: center;
  }

  .cta__title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    color: white;
    margin-bottom: 0.75rem;
  }

  .cta__text {
    color: rgba(255, 255, 255, 0.85);
    font-size: 1.0625rem;
    margin-bottom: 2rem;
  }

  .cta__phone {
    color: white;
    text-decoration: underline;
    font-weight: 600;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 0.9375rem;
    padding: 0.8rem 1.75rem;
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .btn--white {
    background: white;
    color: var(--color-primary);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .btn--white:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }
</style>
