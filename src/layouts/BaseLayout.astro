---
import '@styles/global.css'

interface Props {
  title?: string
  description?: string
}

const { title = 'CleanSpark', description = 'Professional cleaning services' } = Astro.props
const hasHeadSlot = Astro.slots.has('head')
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    {
      hasHeadSlot ? (
        <slot name="head" />
      ) : (
        <>
          <title>{title}</title>
          <meta name="description" content={description} />
        </>
      )
    }
  </head>
  <body>
    <slot />
  </body>
</html>
