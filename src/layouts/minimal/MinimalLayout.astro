---
import BaseLayout from '@layouts/BaseLayout.astro'
import SEO from '@components/shared/SEO.astro'
import { minimalTheme } from '@themes/minimal'
import { buildThemeCssVars } from '@lib/theme-css-vars'

interface Props {
  title?: string
  description?: string
  image?: string
  canonical?: string
  noindex?: boolean
}

const { title, description, image, canonical, noindex } = Astro.props
---

<BaseLayout>
  <SEO
    slot="head"
    title={title}
    description={description}
    image={image}
    canonical={canonical}
    noindex={noindex}
    theme={minimalTheme}
  />
  <div data-theme={minimalTheme.id} style={buildThemeCssVars(minimalTheme)}>
    <slot />
  </div>
</BaseLayout>
