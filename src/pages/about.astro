---
export const prerender = false

import { getCollection } from 'astro:content'
import { resolveLayout } from '@lib/theme-resolver'
import { resolvePageContent } from '@lib/page-resolver'

const themeId = Astro.locals.theme
const Layout = resolveLayout(themeId)
const PageContent = resolvePageContent(themeId, 'about')

const team = await getCollection('team')
const sortedTeam = team.sort((a, b) => a.data.displayOrder - b.data.displayOrder)
---

<Layout
  title="About Us"
  description="Meet the team behind CleanSpark â€” Seattle's trusted cleaning service since 2019."
>
  <PageContent team={sortedTeam} />
</Layout>
